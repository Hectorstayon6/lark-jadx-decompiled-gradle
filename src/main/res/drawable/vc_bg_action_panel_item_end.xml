<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_filler"/>
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="@dimen/ud_radius_l" android:bottomRightRadius="@dimen/ud_radius_l"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/bg_filler"/>
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="@dimen/ud_radius_l" android:bottomRightRadius="@dimen/ud_radius_l"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bg_body"/>
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="@dimen/ud_radius_l" android:bottomRightRadius="@dimen/ud_radius_l"/>
        </shape>
    </item>
</selector>
