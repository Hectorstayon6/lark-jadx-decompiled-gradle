<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:height="18dp" android:width="18dp"/>
                    <solid android:color="@color/primary_pri_500"/>
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:height="7dp" android:width="7dp"/>
                    <solid android:color="@color/static_white"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:height="18dp" android:width="18dp"/>
            <solid android:color="@color/static_white"/>
            <stroke android:width="1dp" android:color="@color/ud_neutral_color_7"/>
        </shape>
    </item>
</selector>
