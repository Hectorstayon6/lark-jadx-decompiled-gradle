<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:topLeftRadius="@dimen/dp_4" android:topRightRadius="@dimen/dp_4"/>
            <solid android:color="@color/fill_hover"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:topLeftRadius="@dimen/dp_4" android:topRightRadius="@dimen/dp_4"/>
            <solid android:color="@color/bg_float"/>
        </shape>
    </item>
</selector>
