<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/fill_pressed"/>
            <corners android:bottomLeftRadius="@dimen/ud_radius_xxl" android:bottomRightRadius="@dimen/ud_radius_xxl"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/fill_pressed"/>
            <corners android:bottomLeftRadius="@dimen/ud_radius_xxl" android:bottomRightRadius="@dimen/ud_radius_xxl"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bg_float"/>
            <corners android:bottomLeftRadius="@dimen/ud_radius_xxl" android:bottomRightRadius="@dimen/ud_radius_xxl"/>
        </shape>
    </item>
</selector>
