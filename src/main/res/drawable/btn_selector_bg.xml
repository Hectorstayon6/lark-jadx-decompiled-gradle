<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/primary_pri_500"/>
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/primary_pri_300"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/primary_pri_500"/>
        </shape>
    </item>
</selector>
