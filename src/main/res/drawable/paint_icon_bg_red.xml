<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="21dp" android:width="21dp"/>
                    <solid android:color="@color/lkui_N900" android:alpha="0"/>
                    <stroke android:width="1dp" android:color="@color/lkui_R500"/>
                </shape>
            </item>
            <item android:left="2.5dp" android:top="2.5dp" android:right="2.5dp" android:bottom="2.5dp">
                <shape android:shape="oval">
                    <size android:height="21dp" android:width="21dp"/>
                    <solid android:color="@color/lkui_R500"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <shape android:shape="oval">
            <size android:height="21dp" android:width="21dp"/>
            <stroke android:width="1.5dp" android:color="@color/lkui_N00"/>
            <solid android:color="@color/lkui_R500"/>
        </shape>
    </item>
</selector>
