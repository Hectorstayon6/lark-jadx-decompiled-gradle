<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_filler"/>
            <corners android:topLeftRadius="@dimen/ud_radius_l" android:topRightRadius="@dimen/ud_radius_l" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/bg_filler"/>
            <corners android:topLeftRadius="@dimen/ud_radius_l" android:topRightRadius="@dimen/ud_radius_l" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bg_body"/>
            <corners android:topLeftRadius="@dimen/ud_radius_l" android:topRightRadius="@dimen/ud_radius_l" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</selector>
