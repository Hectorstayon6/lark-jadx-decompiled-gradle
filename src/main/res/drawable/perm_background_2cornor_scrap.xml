<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_body_overlay"/>
        </shape>
    </item>
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_body"/>
            <stroke android:width="1dp" android:color="@color/line_border_card"/>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
            <size android:height="4dp"/>
        </shape>
    </item>
    <item android:gravity="top" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_body"/>
            <size android:height="1dp"/>
        </shape>
    </item>
</layer-list>
