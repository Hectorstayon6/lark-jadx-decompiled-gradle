<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="@color/function_danger_100"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/function_danger_500"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_activated="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="@color/primary_pri_100"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/primary_pri_500"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/line_divider_default"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
