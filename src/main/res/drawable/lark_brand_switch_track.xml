        <shape android:shape="rectangle">
            <size android:height="35dp" android:width="65dp"/>
            <corners android:radius="28dp"/>
            <gradient android:startColor="#3377ff" android:endColor="#3377ff" android:angle="0"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:height="35dp" android:width="65dp"/>
            <corners android:radius="28dp"/>
            <gradient android:startColor="@color/microapp_m_white" android:endColor="@color/microapp_m_white" android:angle="0"/>
            <stroke android:width="1dp" android:color="#e5e5e5"/>
        </shape>
    </item>
</selector>
