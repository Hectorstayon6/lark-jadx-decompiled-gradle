<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/video_cover" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent" android:transitionName="show_video_share_element"/>
    <ImageView android:layout_gravity="center" android:id="@+id/play_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play" android:contentDescription="@string/Lark_Legacy_PlayVideoButton"/>
    <FrameLayout android:id="@+id/controller_top_layout" android:background="@drawable/video_control_top_bg" android:layout_width="match_parent" android:layout_height="68dp">
        <ImageView android:id="@+id/ctrl_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="8dp" android:src="@drawable/video_ctrl_close"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_gravity="bottom" android:id="@+id/controller_bottom_layout" android:background="@drawable/video_control_bottom_bg" android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/video_operator" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/video_play_selector" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="10sp" android:textColor="@color/lkui_N00" android:gravity="right" android:id="@+id/current_play_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:minWidth="33dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/video_operator" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:id="@+id/video_menu" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:src="@drawable/video_menu" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="10sp" android:textColor="@color/lkui_N00" android:gravity="left" android:id="@+id/video_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:minWidth="33dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/video_menu" app:layout_constraintTop_toTopOf="0"/>
        <SeekBar android:id="@+id/video_seek" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:maxHeight="2dp" android:progressDrawable="@drawable/video_seek_bar" android:minHeight="2dp" android:thumb="@drawable/video_seekbar_thumb_normal" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/current_play_time" app:layout_constraintRight_toLeftOf="@+id/video_duration" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
