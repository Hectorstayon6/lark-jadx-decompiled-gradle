<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/fl_root_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.photoeditor.ve.view.VESurfaceView android:id="@+id/surface_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/fl_top_cover" android:background="@drawable/bg_top_bar" android:layout_width="match_parent" android:layout_height="240dp">
        <ImageView android:id="@+id/iv_close" android:paddingLeft="20dp" android:paddingTop="54dp" android:paddingRight="16dp" android:paddingBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_svg_ve_photo_editor_close" android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <com.ss.android.photoeditor.ve.view.ImageEditToolView android:layout_gravity="bottom" android:id="@+id/edit_tool_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.ss.android.photoeditor.ve.paint.graffiti.VEGraffitiChooserView android:id="@+id/paint_color_choose_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.ss.android.photoeditor.ve.paint.mosaic.VEMosaicChooserView android:id="@+id/mosaic_choose_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.ss.android.photoeditor.ve.textsticker.TextBorderView android:id="@+id/edit_border_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:layout_gravity="bottom" android:id="@+id/fl_delete_cover" android:background="@drawable/bg_paint_seek_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="240dp">
        <com.ss.android.photoeditor.ve.textsticker.DeleteTextStickerView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/delete_text_sticker_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="44dp"/>
    </FrameLayout>
    <com.ss.android.photoeditor.ve.textsticker.VETextChooserView android:id="@+id/input_text_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.ss.android.photoeditor.ve.crop.view.VECropChooserView android:id="@+id/crop_choose_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.ss.android.photoeditor.ve.paint.mosaic.RectView android:id="@+id/rect_mosaic_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
