<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/container" android:background="@color/lkui_transparent" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_title" android:background="@color/lkui_N900" android:clickable="true" android:layout_width="match_parent" android:layout_height="44dp" app:backgroundAlpha="0.7">
        <ImageView android:textColor="@color/lkui_N00" android:gravity="center_vertical" android:id="@+id/btn_back" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/icon_back_white"/>
        <TextView android:textSize="17sp" android:textColor="@color/lkui_N900" android:layout_gravity="center" android:id="@+id/title_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Search_Media"/>
        <androidx.appcompat.widget.AppCompatCheckBox android:textSize="16dp" android:textColor="@color/lkui_N00" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/cb_select_photo" android:background="@drawable/checkbox_bg_selector" android:visibility="visible" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="17dp" android:checked="false" android:button="@null"/>
        <Button android:textSize="17sp" android:textColor="@color/lkui_N00" android:gravity="center" android:layout_gravity="right" android:id="@+id/button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/Lark_Legacy_PickerAllImage" style="@style/Widget.AppCompat.ActionButton"/>
    </FrameLayout>
    <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/layout_original_photo" android:background="@color/lkui_N900" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" app:backgroundAlpha="0.8">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/origin_zone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.larksuite.component.ui.button.LKUICheckBox android:id="@+id/cb_original_photo" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:minHeight="28dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/old_original_text_enable_selector" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/cb_original_photo_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-7dp" android:minHeight="28dp" android:text="@string/Lark_Legacy_OriginPic" android:maxLines="12" android:layout_toRightOf="@+id/cb_original_photo"/>
        </RelativeLayout>
        <View android:layout_width="8dp" android:layout_height="1dp"/>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0">
            <TextView android:textSize="16dp" android:textColor="@color/lkui_N00" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_photo_edit" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="28dp" android:text="@string/Lark_Legacy_Edit" android:maxLines="2" android:textAllCaps="false"/>
            <TextView android:textSize="16dp" android:textColor="@color/lkui_N00" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_photo_preview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="28dp" android:text="预览" android:maxLines="10" android:textAllCaps="false"/>
        </FrameLayout>
        <View android:layout_width="8dp" android:layout_height="1dp"/>
        <FrameLayout android:id="@+id/layout_photo_send" android:paddingRight="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14dp" android:textColor="@color/lkui_N00" android:ellipsize="end" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/btn_photo_send" android:background="@drawable/chat_photo_send_bg_selector" android:paddingLeft="2.5dp" android:paddingRight="2.5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="64dp" android:minHeight="28dp" android:text="@string/Lark_Legacy_PickerSend" android:maxLines="10" android:textAllCaps="false"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
