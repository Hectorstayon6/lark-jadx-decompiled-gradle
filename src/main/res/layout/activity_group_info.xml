<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_base" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/titlebar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_background="@android:color/transparent"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_item_margin_horizontal" android:layout_marginTop="@dimen/setting_item_margin_top" android:layout_marginRight="@dimen/setting_item_margin_horizontal" android:layout_marginHorizontal="@dimen/setting_item_margin_horizontal">
            <RelativeLayout android:id="@+id/rl_group_photo_region" android:background="@drawable/bg_setting_group_item_round_top" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/tv_group_photo_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_GroupPhoto" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
                <ImageView android:id="@+id/iv_right_arrow_1" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/chat_setting_right_arrow" android:scaleType="center" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
                <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/iv_group_photo" android:layout_width="@dimen/avatar_width_resize" android:layout_height="@dimen/avatar_width_resize" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:scaleType="centerCrop" android:layout_centerVertical="true" android:layout_marginEnd="4dp" android:layout_toStartOf="@+id/iv_right_arrow_1" app:oval="true"/>
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rl_group_name_region" android:background="@drawable/bg_setting_group_item_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/tv_group_name_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/Lark_Legacy_GroupName" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/iv_right_arrow_2" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/chat_setting_right_arrow" android:scaleType="center" android:layout_marginStart="4dp" android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="@+id/tv_group_name_desc" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/tv_group_name_desc"/>
                <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:id="@+id/tv_group_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_group_name_desc"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/ll_describe_region" android:background="@drawable/bg_setting_group_item_round_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/tv_about" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/Lark_Legacy_GroupDescription" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/iv_right_arrow_3" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/chat_setting_right_arrow" android:scaleType="center" android:layout_marginStart="4dp" android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="@+id/tv_about" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/tv_about"/>
                <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:id="@+id/tv_group_describe" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_about"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout android:id="@+id/ll_qrcode_region" android:background="@drawable/bg_setting_group_item_round" android:layout_width="match_parent" android:layout_height="@dimen/cell_height" android:layout_marginTop="@dimen/setting_item_margin_top">
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/tv_qrcode_desc" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_QrCode" android:layout_centerVertical="true"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/qrcode_image" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginEnd="4dp" app:srcCompat="@drawable/ud_icon_qr_outlined" app:tint="@color/icon_n2"/>
                    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/qrcode_arrow" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/chat_setting_right_arrow" android:scaleType="center"/>
                </LinearLayout>
            </RelativeLayout>
            <include android:visibility="gone" layout="@layout/item_setting_bind_team_layout"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
