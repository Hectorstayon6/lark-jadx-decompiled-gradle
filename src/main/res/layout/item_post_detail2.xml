<?xml version="1.0" encoding="utf-8"?>
<com.ss.android.lark.chatwindow.view.hover.HoverEventDisallowFragmentLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/chat_thread_item_view" android:layout_width="match_parent" android:layout_height="wrap_content">
