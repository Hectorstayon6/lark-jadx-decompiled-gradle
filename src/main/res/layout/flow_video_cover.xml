<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/flow_video_cover" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:layout_gravity="center" android:id="@+id/flow_video_replay" android:background="@drawable/guide_video_replay_bg" android:padding="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/guide_video_ic_replay"/>
    <FrameLayout android:id="@+id/flow_video_seek_hit" android:background="@drawable/guide_video_seek_hit_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="60sp" android:textColor="@color/static_white" android:layout_gravity="center" android:id="@+id/flow_video_seek_hit_text" android:layout_width="wrap_content" android:layout_height="84dp"/>
            <ProgressBar android:id="@+id/flow_video_seek_hit_progress" android:layout_width="140dp" android:layout_height="4dp" android:maxHeight="4dp" android:max="100" android:progressDrawable="@drawable/guide_video_progress_bar" android:minHeight="4dp" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout android:id="@+id/controller_top_layout" android:background="@drawable/guide_video_ctrl_top_bg" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp">
        <TextView android:textSize="16sp" android:textColor="@color/static_white" android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/flow_ctrl_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="14dp"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/flow_video_volume" android:background="@drawable/guide_video_ctrl_top_bg" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="top|center_vertical|center_horizontal|center" android:orientation="horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp">
            <ImageView android:id="@+id/flow_video_volume_icon" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/guide_video_volume"/>
            <ProgressBar android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/flow_video_volume_progress" android:layout_width="140dp" android:layout_height="4dp" android:layout_marginLeft="8dp" android:maxHeight="4dp" android:max="100" android:progressDrawable="@drawable/guide_video_progress_bar" android:minHeight="4dp" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/flow_controller_bottom_layout" android:background="@drawable/guide_video_ctrl_bottom_bg" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="80dp">
        <ImageView android:id="@+id/flow_video_operator" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/guide_video_play" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="16sp" android:textColor="@color/static_white" android:id="@+id/flow_video_cur_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/flow_video_operator" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:id="@+id/flow_video_orientation" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/guide_video_screen" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="16sp" android:textColor="@color/static_white" android:id="@+id/flow_video_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/flow_video_orientation" app:layout_constraintTop_toTopOf="0"/>
        <SeekBar android:id="@+id/flow_video_seek" android:paddingLeft="12dp" android:paddingRight="12dp" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:maxHeight="4dp" android:progressDrawable="@drawable/guide_video_seek_bar" android:minHeight="4dp" android:thumb="@drawable/guide_video_seekbar_thumb" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/flow_video_cur_time" app:layout_constraintRight_toLeftOf="@+id/flow_video_duration" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
