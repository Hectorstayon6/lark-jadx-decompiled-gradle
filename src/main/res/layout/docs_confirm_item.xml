        <RelativeLayout android:id="@+id/rm_btn" android:layout_width="44.4dp" android:layout_height="match_parent" android:layout_marginTop="9.5dp">
            <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_svg_file_close_outlined" android:tint="@color/icon_n3" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="76dp" android:layout_marginTop="9.5dp"/>
</LinearLayout>
