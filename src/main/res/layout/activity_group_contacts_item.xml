<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/item_bg_selector_transparent" android:paddingTop="9.5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingBottom="9.5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.larksuite.component.universe_design.checkbox.UDCheckBox android:id="@+id/select_box" android:padding="0dp" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" app:ud_checkbox_type="0"/>
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView android:id="@+id/group_avatar" android:background="@drawable/icon_circle_bg" android:visibility="visible" android:layout_width="48dp" android:layout_height="48dp" android:scaleType="centerCrop" android:layout_marginStart="15dp" app:civ_badge_position_angle="45" app:civ_oval="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_weight="1">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/group_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="group_name" android:maxLines="1" android:layout_centerVertical="true"/>
                    <com.ss.android.lark.widget.status.UserStatusLinearLayout android:layout_gravity="center_vertical" android:id="@+id/user_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp"/>
                </LinearLayout>
                <TextView android:textColor="@color/udtoken_tag_text_s_blue" android:layout_gravity="center_vertical" android:id="@+id/chat_tag" android:background="@drawable/blue_tag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_marginLeft="6dp" android:text="@string/Lark_Legacy_TagDepartment" android:layout_toRightOf="@+id/group_name" style="@style/TagTextViewStyle"/>
                <TextView android:textColor="@color/udtoken_tag_text_s_red" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/workday_leave" android:background="@drawable/mine_leave_tag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toRightOf="@+id/oncall_tag" style="@style/TagTextViewStyle"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/oncall_tag" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="4dp" android:src="@drawable/ic_oncall" android:layout_toRightOf="@+id/bot_tag"/>
                <ImageView android:id="@+id/secret_tag_iv" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="6dp" android:src="@drawable/icon_secret_chat" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/bot_tag" android:visibility="gone" android:layout_width="33dp" android:layout_height="16dp" android:layout_marginLeft="4dp" android:src="0x7f0802ee" android:scaleType="fitCenter" android:layout_toRightOf="@+id/chat_tag"/>
                <TextView android:textSize="12sp" android:textColor="@color/lkui_N600" android:layout_gravity="center_vertical" android:id="@+id/message_time" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20:20" android:layout_centerVertical="true"/>
            </LinearLayout>
            <com.ss.android.lark.widget.EllipsizedEmojiconTextView android:textSize="12sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/group_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5.5dp" android:maxWidth="267dp" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/dividing_line" android:background="@color/line_border_component" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="76.8dp"/>
</LinearLayout>
