<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16">
            <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/user_avatar" android:layout_width="@dimen/dp_28" android:layout_height="@dimen/dp_28" android:tint="@color/fill_img_mask" android:layout_marginStart="20dp" android:tintMode="add" app:oval="true"/>
            <TextView android:id="@+id/chat_text_1" android:background="@drawable/chat_background_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_NewSettings_PreviewTextSize" android:layout_marginStart="@dimen/dp_7" android:layout_marginEnd="@dimen/dp_40" style="@style/SettingFontSizeItem"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16">
            <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/image_2" android:background="@color/static_white" android:layout_width="@dimen/dp_28" android:layout_height="@dimen/dp_28" android:src="@drawable/feishu_logo_color" android:tint="@color/fill_img_mask" android:layout_marginStart="20dp" app:oval="true"/>
            <TextView android:id="@+id/chat_text_2" android:background="@drawable/chat_background_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_NewSettings_AdjustSlider" android:layout_marginStart="7dp" android:layout_marginEnd="@dimen/dp_40" style="@style/SettingFontSizeItem"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8">
            <ImageView android:id="@+id/image_3" android:visibility="invisible" android:layout_width="@dimen/dp_28" android:layout_height="@dimen/dp_28" android:layout_marginStart="20dp"/>
            <TextView android:id="@+id/chat_text_3" android:background="@drawable/chat_background_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_NewSettings_TextSizeWillBeChanged" android:layout_marginStart="7dp" android:layout_marginEnd="@dimen/dp_40" style="@style/SettingFontSizeItem"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
