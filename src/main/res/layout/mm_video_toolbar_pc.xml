<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/mm_toolbar_seekbar_container" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="6dp">
        <com.ss.android.lark.mm.module.reaction.panel.ReactionTimeLine android:id="@+id/mm_toolbar_reaction_line" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="14dp" android:layout_marginLeft="-2dp" android:layout_marginRight="-2dp" android:layout_alignLeft="@+id/mm_toolbar_seekbar" android:layout_alignRight="@+id/mm_toolbar_seekbar" android:layout_alignParentTop="true"/>
        <com.ss.android.lark.mm.module.player.core.layer.widget.KeyWordCircle android:id="@+id/mm_toolbar_search_dot_line" android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_below="@+id/mm_toolbar_seekbar" android:layout_alignLeft="@+id/mm_toolbar_seekbar" android:layout_alignRight="@+id/mm_toolbar_seekbar" app:radius="2dp"/>
        <SeekBar android:id="@+id/mm_toolbar_seekbar" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:maxHeight="2dp" android:progressDrawable="@drawable/mm_seekbar_layer_progress_pc" android:minHeight="2dp" android:thumb="@drawable/mm_shape_thumb_pc" android:thumbOffset="5dp" android:layout_below="@+id/mm_toolbar_reaction_line"/>
        <TextView android:textSize="12dp" android:textColor="#59ffffff" android:id="@+id/mm_toolbar_position" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_below="@+id/mm_toolbar_search_dot_line" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="12dp" android:textColor="#59ffffff" android:id="@+id/mm_toolbar_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_below="@+id/mm_toolbar_search_dot_line" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:paddingLeft="17dp" android:paddingRight="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_prev" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_play_prev_pc_selector"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_prev15s" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/mm_toolbar_play_pause" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_back_15s_pc"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_play_pause" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginRight="28dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_play_pc"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_play_loading" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" app:srcCompat="@drawable/mm_video_loading_pc"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_next15s" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/mm_toolbar_play_pause" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_forward_15s_pc"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_next" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_play_next_pc_selector"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_speed" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/mm_video_speed_pc"/>
        <TextView android:textSize="9dp" android:textColor="@color/lkui_N00" android:gravity="center" android:id="@+id/mm_toolbar_speed_tag" android:background="@drawable/mm_bg_toolbar_speed_pc" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/MMWeb_G_Speed" android:translationX="-18dp" android:translationY="10dp" app:layout_constraintBottom_toTopOf="@+id/mm_toolbar_speed" app:layout_constraintLeft_toRightOf="@+id/mm_toolbar_speed"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/mm_toolbar_reaction" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="25dp" android:layout_centerVertical="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:lottie_rawRes="@raw/mm_like_small_pc"/>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/mm_toolbar_podcast_exit" android:background="@drawable/mm_bg_toolbar_podcast_exit" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="wrap_content" android:layout_height="26dp" android:layout_marginTop="25dp" android:layout_marginBottom="15dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/mm_video_podcast_pc"/>
            <TextView android:textSize="12dp" android:textColor="#d8ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/MMWeb_G_ExitPodcastMode"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
