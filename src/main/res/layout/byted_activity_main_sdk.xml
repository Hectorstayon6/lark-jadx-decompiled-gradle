<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/activity_main" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/id_preview_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <android.opengl.GLSurfaceView android:id="@+id/id_gl_sv" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <com.ss.android.bytedcert.view.CountDownButton android:textSize="20sp" android:textColor="@android:color/white" android:gravity="center_horizontal" android:id="@+id/countdown2" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:text="跳过" android:layout_centerInParent="true" app:byted_progressLineWidth="10dp" app:byted_totalTime="5000"/>
    <FrameLayout android:id="@+id/id_c" android:background="@color/byted_transparent" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="26sp" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_task_board" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="100dp"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/bar_view" android:background="@color/byted_white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:orientation="vertical" android:id="@+id/bar" android:background="@color/byted_white" android:layout_width="match_parent" android:layout_height="44dp">
            <ImageView android:id="@+id/face_return_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:scaleType="centerInside"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
