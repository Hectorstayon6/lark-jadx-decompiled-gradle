<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/web_menu_dialog_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="12sp" android:textColor="@color/text_caption" android:gravity="center" android:id="@+id/web_menu_title_web" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="44dp" android:singleLine="true"/>
    <RelativeLayout android:id="@+id/web_menu_title_webapp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="48dp">
        <com.larksuite.component.ignition.widget.squircle.SquircleImageView android:id="@+id/web_menu_title_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="24dp" android:layout_centerVertical="true" app:border_color="#1a1f2329" app:border_width="0.5dp" app:radius="6dp" app:tint="@color/fill_img_mask" app:tintMode="src_over"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/web_menu_title_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:singleLine="true" android:layout_toRightOf="@+id/web_menu_title_icon" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/web_cross_line" android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    <com.bytedance.lark.webview.container.impl.menu.WebViewPager android:id="@+id/web_recyclerView_icon_menu" android:background="@drawable/web_menu_dialog_bg" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:overScrollMode="never"/>
    <net.lucode.hackware.magicindicator.MagicIndicator android:layout_gravity="center_horizontal" android:id="@+id/web_menu_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/web_layout_cancel" android:layout_width="match_parent" android:layout_height="74dp">
        <View android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_title" android:gravity="center" android:layout_gravity="center" android:background="@drawable/lkui_list_item_click_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/Lark_Legacy_Cancel"/>
    </LinearLayout>
</LinearLayout>
