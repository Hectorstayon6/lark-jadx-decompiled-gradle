<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/fl_title_wrapper" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/iv_back" android:padding="2dp" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/opb_app_index_back_icon" android:layout_centerVertical="true" android:layout_marginStart="18dp" android:layout_alignParentStart="true" app:tint="@color/icon_n1"/>
        <TextView android:textSize="17dp" android:textColor="@color/text_title" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_BOTs" android:layout_centerInParent="true" android:textFontWeight="500"/>
        <TextView android:textSize="17sp" android:textColor="@color/text_title" android:id="@+id/tv_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_GroupBot_Add" android:layout_centerVertical="true" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_content" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_error_wrapper" android:background="@color/bg_body" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline android:orientation="horizontal" android:id="@+id/start_line" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.24"/>
        <ImageView android:id="@+id/img" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/illustration_empty_negative_load_failed" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/start_line"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/img">
            <TextView android:textSize="14sp" android:textColor="@color/text_caption" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/Lark_OpenPlatform_InputScFailMsg" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/static_white" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:id="@+id/tv_retry" android:background="@drawable/opb_app_index_button_bg_selector" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginTop="16dp" android:minWidth="76dp" android:text="@string/Lark_OpenPlatform_InputScRldBttn"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_empty_wrapper" android:background="@color/bg_body" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/empty_image" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/illustration_platform_empty_positive_add_robot_1" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/empty_guideline"/>
        <TextView android:textColor="@color/text_caption" android:gravity="center" android:id="@+id/empty_tip_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="58dp" android:layout_marginTop="15dp" android:layout_marginRight="58dp" android:text="@string/Lark_GroupBot_MobileDescription" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/empty_image"/>
        <TextView android:textColor="@color/text_link_normal" android:gravity="center" android:id="@+id/empty_tip_help" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="58dp" android:layout_marginTop="10dp" android:layout_marginRight="58dp" android:text="@string/Lark_GroupBot_MobileUsage" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/empty_tip_text"/>
        <androidx.constraintlayout.widget.Guideline android:orientation="horizontal" android:id="@+id/empty_guideline" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.25"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
