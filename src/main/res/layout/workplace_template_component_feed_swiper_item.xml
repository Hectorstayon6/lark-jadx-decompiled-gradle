<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/feed_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:layout_weight="1" app:tint="@color/fill_img_mask" app:tintMode="src_over"/>
    <FrameLayout android:id="@+id/content_wrapper" android:layout_width="match_parent" android:layout_height="80dp">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <TextView android:textSize="16dp" android:textColor="@color/text_title" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/feed_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1" android:lineSpacingExtra="4dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/text_caption" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/feed_desc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
