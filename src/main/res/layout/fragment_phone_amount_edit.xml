<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/lkui_N00" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_back_icon="@drawable/titlebar_close_bg_selector"/>
    <LinearLayout android:orientation="vertical" android:background="@color/lkui_N50" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="14sp" android:textColor="@color/lkui_N500" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="4dp" android:text="@string/Lark_Legacy_ApplicationPhoneCallTimeSetPageSubTitle" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/phone_amount_edit_ll" android:background="@color/lkui_N00" android:paddingTop="13dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/lkui_N900" android:layout_gravity="center_vertical" android:id="@+id/phone_amount_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/Lark_Legacy_ApplicationPhoneCallTimeSetPageText" android:layout_marginStart="16dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/lkui_N900" android:layout_gravity="center_vertical" android:id="@+id/phone_amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginStart="25dp"/>
            <EditText android:textSize="16sp" android:layout_gravity="center_vertical" android:id="@+id/phone_amount_edit_et" android:background="@null" android:focusable="true" android:focusableInTouchMode="true" android:visibility="gone" android:layout_width="165dp" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:hint="@string/Lark_Legacy_ApplicationPhoneCallTimeSetPageBackground" android:singleLine="true" android:maxLength="8" android:layout_weight="1" android:inputType="number" android:layout_marginStart="25dp"/>
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/phone_amount_edit_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_svg_edit" android:paddingStart="16dp" android:paddingEnd="16dp" android:layout_alignParentEnd="true"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/phone_amount_clear_iv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_gray_close" android:scaleType="center" android:paddingStart="16dp" android:paddingEnd="16dp" android:layout_marginStart="0dp" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/lkui_N500" android:id="@+id/phone_amount_edit_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </LinearLayout>
</LinearLayout>
