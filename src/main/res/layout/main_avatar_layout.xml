<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/avatar_container" android:background="@drawable/main_avatar_bg" android:padding="2dp" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginTop="20dp" android:layout_centerInParent="true">
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView android:layout_gravity="center" android:id="@+id/avatar" android:layout_width="32dp" android:layout_height="32dp" app:civ_badge_position_angle="-45" app:civ_oval="true"/>
    </FrameLayout>
    <ImageView android:id="@+id/update_tip" android:visibility="gone" android:layout_width="17dp" android:layout_height="17dp" android:layout_marginTop="-5dp" android:src="@drawable/update_badge" android:layout_alignTop="@+id/avatar_container" android:layout_marginEnd="-5dp" android:layout_alignEnd="@+id/avatar_container"/>
    <ImageView android:id="@+id/bottom_tip" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/icon_do_not_disturb_mark" android:layout_alignBottom="@+id/avatar_container" android:layout_marginEnd="-5dp" android:layout_alignEnd="@+id/avatar_container"/>
</RelativeLayout>
