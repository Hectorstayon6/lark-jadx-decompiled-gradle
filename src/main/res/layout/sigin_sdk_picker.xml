<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/signin_sdk_dialog_bottom_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
