<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#21282c" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp">
    <ImageView android:id="@+id/microapp_m_btn_back" android:padding="14dp" android:layout_width="48dp" android:layout_height="match_parent" android:src="@drawable/microapp_m_ic_back" android:layout_centerVertical="true"/>
    <View android:background="#cc111111" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_toRightOf="@+id/microapp_m_btn_back"/>
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/microapp_m_bar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="1/1" android:layout_toRightOf="@+id/microapp_m_btn_back" android:layout_centerVertical="true"/>
    <LinearLayout android:id="@+id/microapp_m_check_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/microapp_m_check_image" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginRight="7dp" android:src="@drawable/microapp_m_btn_selected"/>
        <TextView android:textSize="15sp" android:textColor="@color/microapp_m_default_text_color" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/microapp_m_select" android:layout_centerVertical="true"/>
    </LinearLayout>
    <Button android:textSize="14sp" android:textColor="@color/microapp_m_default_text_color" android:id="@+id/microapp_m_done" android:background="@drawable/microapp_m_action_btn" android:paddingLeft="12dp" android:paddingTop="5dp" android:paddingRight="12dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="9dp" android:minWidth="1dp" android:minHeight="1dp" android:text="@string/microapp_m_done" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
