<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_group_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView android:id="@+id/iv_group_avatar" android:background="@drawable/thread_avatar_bg" android:layout_width="50dp" android:layout_height="50dp" app:civ_border_width="2dp" app:civ_oval="true"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_weight="1">
            <com.larksuite.framework.ui.SpareLayout android:orientation="horizontal" android:id="@+id/ll_group_name_icon" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="17dp" android:textColor="@color/lkui_N00" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_group_name" android:layout_width="wrap_content" android:layout_height="24dp" android:singleLine="true"/>
                <TextView android:textSize="11dp" android:textColor="@color/lkui_N900" android:layout_gravity="center_vertical" android:id="@+id/tv_group_icon" android:background="@drawable/white_tag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginLeft="8dp" style="@style/TagTextViewStyle"/>
            </com.larksuite.framework.ui.SpareLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_group_num_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
                <TextView android:textSize="14dp" android:textColor="#cbffffff" android:gravity="center_vertical" android:id="@+id/tv_group_num" android:layout_width="wrap_content" android:layout_height="17dp" android:includeFontPadding="false" android:drawableLeft="@drawable/ic_svg_thread_group_member_num" android:drawablePadding="5dp"/>
                <View android:id="@+id/num_desc_divider" android:background="#cbffffff" android:layout_width="0.5dp" android:layout_height="10dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
                <TextView android:textSize="12dp" android:textColor="#cbffffff" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_group_desc" android:layout_width="0dp" android:layout_height="17dp" android:singleLine="true" android:includeFontPadding="false" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_share_group" android:background="@drawable/thread_announcement_share_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="11dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:src="@drawable/ud_icon_share_outlined" android:tint="@color/static_white"/>
            <TextView android:textSize="14dp" android:textColor="@color/lkui_N00" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:layout_marginRight="13dp" android:layout_marginBottom="4dp" android:text="@string/Lark_Chat_TopicToolShare"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_thread_done" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:src="@drawable/ic_svg_thread_done_selector"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_new_announce_icon" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginTop="17dp" android:src="@drawable/ud_icon_boards_filled" android:tint="@color/lkui_Y500"/>
        <TextView android:textSize="12dp" android:textColor="#cbffffff" android:ellipsize="end" android:id="@+id/tv_new_announce" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:maxLines="2" android:includeFontPadding="false" android:lineSpacingMultiplier="1.2"/>
    </RelativeLayout>
</LinearLayout>
