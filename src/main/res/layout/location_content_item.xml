<?xml version="1.0" encoding="utf-8"?>
<com.larksuite.component.ui.layout.LKUIRoundableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/round_container" android:background="@color/bg_float" style="@style/MessageCard">
    <RelativeLayout android:layout_gravity="center" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/sp_16" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_12" android:layout_marginTop="@dimen/dp_12" android:layout_marginRight="@dimen/dp_12" android:maxLines="2" android:layout_alignParentTop="true"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/sub_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_12" android:layout_marginTop="2.5dp" android:layout_marginRight="@dimen/dp_12" android:maxLines="1" android:layout_below="@+id/title_tv"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_12" android:layout_below="@+id/sub_title_tv">
            <ImageView android:id="@+id/location_iv" android:background="@color/bg_body_overlay" android:layout_width="match_parent" android:layout_height="100dp" android:scaleType="centerCrop"/>
            <ProgressBar android:layout_gravity="center" android:id="@+id/location_message_image_loading" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:indeterminateDrawable="@drawable/progressbar_round"/>
        </FrameLayout>
    </RelativeLayout>
</com.larksuite.component.ui.layout.LKUIRoundableLayout>
