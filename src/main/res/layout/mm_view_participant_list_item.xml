<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/item" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp">
        <com.larksuite.component.universe_design.image.UDAvatar android:id="@+id/ivIcon" android:layout_width="0dp" android:layout_height="0dp" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_ic_avatar_default" app:ud_avatar_size="-1"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true" android:layout_marginEnd="12dp">
            <com.ss.android.lark.mm.module.share.user.UserNameView android:id="@+id/userName" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.ss.android.lark.mm.widget.BoldTextView android:textSize="14dp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/tvDesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/ivDelete" android:background="@color/mm_ud_list_bg_btn" android:visibility="gone" android:layout_width="64dp" android:layout_height="match_parent" android:layout_marginStart="0dp" android:layout_alignParentEnd="true">
            <androidx.appcompat.widget.AppCompatImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true" app:srcCompat="@drawable/mm_ic_list_delete"/>
        </RelativeLayout>
    </FrameLayout>
</merge>
