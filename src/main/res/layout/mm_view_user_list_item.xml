<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.larksuite.component.universe_design.checkbox.UDCheckBox android:id="@+id/ivCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="4dp" app:ud_checkbox_size="0"/>
    <com.larksuite.component.universe_design.image.UDAvatar android:id="@+id/ivIcon" android:layout_width="0dp" android:layout_height="0dp" android:layout_centerVertical="true" android:layout_toEndOf="@+id/ivCheck" app:srcCompat="@drawable/mm_ic_avatar_default" app:ud_avatar_size="-1"/>
