<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/titlebar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_back_icon="@drawable/titlebar_close_bg_selector"/>
    <com.ss.android.lark.search.widget.ChatterPicker android:id="@+id/add_group_member_chatter_picker" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <RelativeLayout android:id="@+id/show_bottom" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="49dp">
        <View android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textSize="15sp" android:textColor="@color/function_info_500" android:id="@+id/select_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/Lark_Legacy_SelectedZeroPeople" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/sync_msg_ll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_centerVertical="true">
            <com.larksuite.component.universe_design.checkbox.UDCheckBox android:layout_gravity="center_vertical" android:id="@+id/sync_msg_cb" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" app:ud_checkbox_type="0"/>
            <TextView android:textSize="15sp" android:textColor="@color/function_info_500" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/Lark_Legacy_CreateGroupChatSyncChatRecord"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/confirm" android:background="@drawable/common_corner3dp_color_c12" android:paddingLeft="18dp" android:paddingRight="18dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginRight="15dp" android:text="@string/Lark_Legacy_ConfirmTip" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:textAllCaps="false"/>
    </RelativeLayout>
</LinearLayout>
