<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="17sp" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/desktop_title_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:minHeight="44dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/layout_top" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_container">
        <RelativeLayout android:id="@+id/search_bar" android:background="@drawable/oncall_contacts_searchbar_bg" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginLeft="12dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp" android:layout_marginBottom="8dp">
            <ImageView android:id="@+id/search_icon" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ud_icon_search_outlined" android:tint="@color/icon_n3" android:layout_centerVertical="true" android:layout_marginStart="9dp"/>
            <EditText android:textSize="16sp" android:textColor="@color/text_title" android:textColorHint="@color/text_placeholder" android:layout_gravity="center_vertical" android:id="@+id/search_et" android:background="@null" android:nextFocusDown="@+id/search_et" android:layout_width="wrap_content" android:layout_height="22dp" android:layout_marginTop="7dp" android:layout_marginBottom="7dp" android:hint="@string/Lark_Legacy_Search" android:maxLines="1" android:singleLine="true" android:layout_toRightOf="@+id/search_icon" android:layout_centerVertical="true" android:imeOptions="actionSearch" android:layout_marginStart="9dp" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_clear" android:visibility="gone" android:layout_width="17.5dp" android:layout_height="17.5dp" android:layout_marginLeft="12.5dp" android:layout_marginRight="12.5dp" android:src="@drawable/mine_status_clear" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.larksuite.framework.ui.flowlayout.TagFlowLayout android:id="@+id/tag_flowlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginRight="11dp" android:layout_below="@+id/search_bar" app:max_select="1"/>
    </RelativeLayout>
    <com.ss.android.lark.widget.ptr.LKUIPtrClassicFrameLayout android:id="@+id/oncall_ptr_layout" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_top" app:lkui_ptr_duration_to_close_either="500" app:lkui_ptr_keep_header_when_refresh="true" app:lkui_ptr_mode="2" app:lkui_ptr_pull_to_fresh="false" app:lkui_ptr_ratio_of_header_height_to_refresh="0.5" app:lkui_ptr_resistance="1.7">
        <com.ss.android.lark.widget.recyclerview.CommonRecyclerView android:id="@+id/group_oncall_recylerview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="0dp"/>
    </com.ss.android.lark.widget.ptr.LKUIPtrClassicFrameLayout>
    <FrameLayout android:id="@+id/oncall_empty" android:background="@color/bg_body" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_top">
        <com.larksuite.component.universe_design.emptystate.UDEmptyState android:layout_width="match_parent" android:layout_height="match_parent" app:ud_empty_desc="@string/Lark_HelpDesk_EmptyHelpDesk" app:ud_empty_imageRes="@drawable/illustration_empty_neutral_no_message_logging" app:ud_empty_imageSize="@dimen/ud_emptystate_image_size_small"/>
    </FrameLayout>
</RelativeLayout>
