        <TextView android:textSize="17dp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/action_dialog_info_text" android:background="@drawable/icon_circle_bg" android:visibility="invisible" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="18dp" android:layout_alignTop="@+id/action_dialog_info_title_layout" android:layout_alignBottom="@+id/action_dialog_info_title_layout"/>
