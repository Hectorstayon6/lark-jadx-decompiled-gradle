<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/item_bg_selector_c11" android:paddingTop="9.5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="12dp">
        <com.larksuite.component.universe_design.checkbox.UDCheckBox android:id="@+id/select_box" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="0dp" android:layout_marginEnd="2dp" app:ud_checkbox_size="1"/>
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView android:id="@+id/group_avatar" android:background="@drawable/icon_circle_bg" android:visibility="visible" android:layout_width="48dp" android:layout_height="48dp" android:scaleType="centerCrop" app:civ_oval="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:layout_marginEnd="0dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="17sp" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/item_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="group_name" android:maxLines="1" android:layout_weight="1"/>
                <TextView android:textColor="@color/primary_pri_500" android:layout_gravity="center_vertical" android:id="@+id/doc_tag" android:background="@drawable/blue_tag_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_marginLeft="6dp" android:text="@string/Lark_Legacy_TagDepartment" style="@style/TagTextViewStyle"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/item_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="group_name" android:maxLines="1"/>
            <View android:id="@+id/dividing_line" android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="9.5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
