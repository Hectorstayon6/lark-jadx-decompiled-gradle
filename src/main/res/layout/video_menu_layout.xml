<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/lkui_transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/root" android:background="@drawable/modify_avatar_popupwindow_round8_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/save" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="17sp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/save_tv" android:background="@drawable/modify_avatar_item_bg_selector_top" android:clickable="true" android:layout_width="match_parent" android:layout_height="64dp" android:text="@string/Lark_Legacy_SaveVideoMenu"/>
            <View android:id="@+id/divide_1" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <TextView android:textSize="17sp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/save_to_drive_tv" android:background="@drawable/modify_avatar_item_bg_selector_normal" android:clickable="true" android:layout_width="match_parent" android:layout_height="64dp" android:text="@string/Lark_Legacy_SaveFileToDrive"/>
        <View android:id="@+id/save_to_drive_divider" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/jump_to_chat" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="17sp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/jump_to_chat_tv" android:background="@drawable/modify_avatar_item_bg_selector_top" android:clickable="true" android:layout_width="match_parent" android:layout_height="64dp" android:text="@string/Lark_Legacy_JumpToChat"/>
            <View android:id="@+id/divide_2" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <TextView android:textSize="17sp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/cancel_tv" android:background="@drawable/modify_avatar_item_bg_selector_bottom" android:clickable="true" android:layout_width="match_parent" android:layout_height="64dp" android:text="@string/Lark_Legacy_SaveBoxOperaCancel"/>
    </LinearLayout>
</FrameLayout>
