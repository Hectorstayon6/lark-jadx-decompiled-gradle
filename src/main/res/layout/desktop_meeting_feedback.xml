<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/vc_feedback_desktop_bg" android:paddingBottom="16dp" android:layout_width="392dp" android:layout_height="wrap_content">
        <com.ss.android.vc.common.widget.IconFontView android:textSize="24dp" android:textColor="@color/ud_N400" android:id="@+id/feed_back_close" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_share_delete" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/ud_N900" android:gravity="start" android:id="@+id/question_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/View_G_FeedbackTitle" android:layout_marginStart="20dp" android:layout_marginEnd="16dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/feed_back_awesome" android:background="@drawable/vc_feedback_option_bg_selector" android:layout_width="112dp" android:layout_height="40dp" android:layout_marginTop="16dp" android:layout_below="@+id/question_tip" android:layout_marginStart="20dp">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:layout_gravity="center_vertical" android:id="@+id/feed_back_awesome_icon" android:layout_width="16dp" android:layout_height="16dp" android:text="@string/iconfont_icon_thumb_up_solid"/>
            <TextView android:textSize="14dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/feed_back_awesome_text" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/View_G_GoodButton" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/feed_back_bad" android:background="@drawable/vc_feedback_option_bg_selector" android:layout_width="112dp" android:layout_height="40dp" android:layout_marginTop="16dp" android:layout_below="@+id/question_tip" android:layout_marginStart="8dp" android:layout_marginEnd="16dp" android:layout_toEndOf="@+id/feed_back_awesome">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:layout_gravity="center_vertical" android:id="@+id/feed_back_bad_icon" android:layout_width="16dp" android:layout_height="16dp" android:text="@string/iconfont_icon_thumb_down_solid"/>
            <TextView android:textSize="14dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/feed_back_bad_text" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/View_G_BadButton" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/feedback_negative_selected_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/feed_back_bad">
            <TextView android:textSize="12dp" android:textColor="@color/ud_N600" android:id="@+id/feedback_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/View_G_SorryWhatWentWrong" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/feed_back_type_video_container" android:background="@drawable/vc_feedback_option_bg_selector" android:layout_width="112dp" android:layout_height="56dp" android:layout_marginTop="8dp" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/feedback_hint">
                <com.ss.android.vc.common.widget.IconFontView android:textSize="17dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:layout_gravity="center_horizontal" android:id="@+id/feed_back_type_video_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_audio_video_solid"/>
                <TextView android:textSize="12dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:layout_gravity="center_horizontal" android:id="@+id/feed_back_type_video_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/View_M_AudioVideoTab"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/feed_back_type_screen_container" android:background="@drawable/vc_feedback_option_bg_selector" android:layout_width="112dp" android:layout_height="56dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/feed_back_type_video_container" app:layout_constraintTop_toBottomOf="@+id/feedback_hint">
                <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_horizontal" android:id="@+id/feed_back_type_screen_icon" android:layout_width="17dp" android:layout_height="17dp" android:scaleType="centerCrop" app:srcCompat="@drawable/ud_icon_share_screen_filled" app:tint="@drawable/vc_feedback_option_color_selector"/>
                <TextView android:textSize="12dp" android:textColor="@drawable/vc_feedback_option_color_selector" android:layout_gravity="center_horizontal" android:id="@+id/feed_back_type_screen_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/View_M_ScreenSharingTab"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/feedback_negative_reasons" android:visibility="visible" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="176dp" android:layout_marginTop="8dp" android:layout_centerHorizontal="true" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/feed_back_type_screen_container"/>
            <EditText android:textSize="14dp" android:textColor="@color/ud_N900" android:textColorHint="@color/ud_N500" android:ellipsize="start" android:gravity="top" android:id="@+id/comment" android:background="@drawable/bg_desktop_feedback_custom_tag" android:padding="10dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="8dp" android:hint="@string/View_G_OtherProblems" android:cursorVisible="true" android:singleLine="false" android:maxLength="256" android:layout_below="@+id/feedback_negative_reasons" android:lineSpacingExtra="1.5dp" android:textCursorDrawable="@drawable/cursor_color" android:layout_marginStart="20dp" android:layout_marginEnd="16dp" android:focusedByDefault="false" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/feedback_negative_reasons"/>
            <Button android:textSize="14dp" android:textColor="@color/ud_N00" android:id="@+id/confirm_feed_back" android:background="@drawable/vc_feedback_confirm_bg" android:layout_width="92dp" android:layout_height="32dp" android:layout_marginTop="16dp" android:text="@string/View_G_SubmitButton" android:textAllCaps="false" android:layout_marginEnd="16dp" android:stateListAnimator="@null" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toBottomOf="@+id/comment"/>
            <Button android:textSize="14dp" android:textColor="@color/ud_N900" android:id="@+id/cancel_feed_back" android:background="@drawable/vc_feedback_cancel_bg" android:layout_width="92dp" android:layout_height="32dp" android:layout_marginTop="16dp" android:text="@string/View_G_CancelButton" android:textAllCaps="false" android:layout_marginEnd="16dp" android:stateListAnimator="@null" app:layout_constraintEnd_toStartOf="@+id/confirm_feed_back" app:layout_constraintTop_toBottomOf="@+id/comment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/feedback_thanks" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="4dp">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@color/ud_G500" android:id="@+id/feedback_thanks_icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/iconfont_icon_yes_solid"/>
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/ud_N900" android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/View_G_ThankYouToast" android:layout_marginStart="16dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
