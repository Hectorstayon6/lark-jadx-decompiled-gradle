<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/root_layout" android:background="@color/bg_base" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_background="@android:color/transparent" app:tb_title="@string/Lark_Legacy_P2pChatSettingTitlebar"/>
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/chatter_info_view" android:background="@drawable/bg_setting_group_item_round" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_item_margin_horizontal" android:layout_marginTop="@dimen/setting_item_margin_top" android:layout_marginRight="@dimen/setting_item_margin_horizontal" android:layout_marginHorizontal="@dimen/setting_item_margin_horizontal">
                <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/chatter_avatar" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="16dp" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:oval="true"/>
                <ImageView android:id="@+id/chatter_avatar_secret_iv" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_svg_message_item_secret" app:layout_constraintBottom_toBottomOf="@+id/chatter_avatar" app:layout_constraintEnd_toEndOf="@+id/chatter_avatar"/>
                <TextView android:textSize="12sp" android:textColor="@color/text_caption" android:ellipsize="end" android:gravity="center" android:id="@+id/chatter_name_tv" android:layout_width="72dp" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="16dp" android:maxLines="2" android:layout_marginStart="4dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/add_chatter_iv" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/chatter_avatar"/>
