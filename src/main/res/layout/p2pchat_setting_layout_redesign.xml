            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/bot_info_view" android:background="@drawable/bg_setting_group_item_round" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_item_margin_horizontal" android:layout_marginTop="@dimen/setting_item_margin_top" android:layout_marginRight="@dimen/setting_item_margin_horizontal" android:layout_marginHorizontal="@dimen/setting_item_margin_horizontal">
                <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/setting_bot_avatar" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:oval="true"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/bot_name_desc_layout" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginStart="10dp" android:layout_marginEnd="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/bot_info_arrow" app:layout_constraintStart_toEndOf="@+id/setting_bot_avatar" app:layout_constraintTop_toTopOf="0">
                    <TextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/bot_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                    <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/bot_desc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
