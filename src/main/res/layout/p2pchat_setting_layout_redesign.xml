            </androidx.constraintlayout.widget.ConstraintLayout>
            <include layout="@layout/item_setting_function"/>
            <include layout="@layout/item_setting_search"/>
            <LinearLayout android:orientation="vertical" android:background="@drawable/bg_setting_group_item_round" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_item_margin_horizontal" android:layout_marginTop="@dimen/setting_item_margin_top" android:layout_marginRight="@dimen/setting_item_margin_horizontal" android:layout_marginHorizontal="@dimen/setting_item_margin_horizontal">
                <RelativeLayout android:id="@+id/p2p_chat_shortcut_switch" android:background="@drawable/bg_setting_group_item_round" android:paddingLeft="16dp" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="@dimen/cell_height">
                    <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/tv_quickswitcher_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Chat_QuickswitcherSetting" android:layout_centerVertical="true"/>
                    <com.larksuite.component.ui.button.LKUISwitchButton android:id="@+id/shortcut_switch_button" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:id="@+id/p2p_setting_option_divide" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/p2p_chat_setting_option_wrapper" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:id="@+id/chat_box_layout_wrapper" android:background="@drawable/bg_setting_group_item_rectangle" android:paddingLeft="16dp" android:paddingRight="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/cell_subtitle_height">
                        <com.larksuite.component.ui.button.LKUISwitchButton android:id="@+id/sb_move_to_box_switch" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/tv_move_to_box_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12.5dp" android:text="@string/Lark_Legacy_MoveToChatBox" android:maxLines="1" android:layout_toLeftOf="@+id/sb_move_to_box_switch"/>
                        <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/tv_move_to_box_subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/Lark_Legacy_NotifOnMoveToChatBox0" android:maxLines="1" android:layout_toLeftOf="@+id/sb_move_to_box_switch" android:layout_below="@+id/tv_move_to_box_title"/>
                    </RelativeLayout>
                    <View android:id="@+id/box_setting_divide" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp" android:layout_alignParentBottom="true"/>
                    <RelativeLayout android:id="@+id/message_remind_wrapper" android:background="@drawable/bg_setting_group_item_rectangle" android:paddingLeft="16dp" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="@dimen/cell_height">
                        <TextView android:textSize="16sp" android:textColor="@color/black_text_selector" android:id="@+id/tv_message_notify" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_ChatGroupInfoMessageNotification" android:layout_centerVertical="true"/>
                        <com.larksuite.component.ui.button.LKUISwitchButton android:id="@+id/switch_button" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_auto_translate_region" android:background="@drawable/bg_setting_group_item_round_bottom" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/cell_subtitle_height">
                        <View android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentTop="true"/>
                        <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/auto_translate_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12.5dp" android:text="@string/Lark_Legacy_AutoTranslation" android:layout_alignParentTop="true"/>
                        <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/auto_translate_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="11.5dp" android:text="@string/Lark_Legacy_ChatGroupInfoGroupAutotranslateDescription" android:maxLines="2" android:layout_toLeftOf="@+id/sb_auto_translate_switch" android:layout_below="@+id/auto_translate_label"/>
                        <com.larksuite.component.ui.button.LKUISwitchButton android:id="@+id/sb_auto_translate_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/function_danger_500" android:gravity="center" android:id="@+id/close_secret_chat_button" android:background="@drawable/bg_setting_group_item_round" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/cell_height" android:layout_marginLeft="@dimen/setting_item_margin_horizontal" android:layout_marginTop="@dimen/setting_item_margin_top" android:layout_marginRight="@dimen/setting_item_margin_horizontal" android:text="@string/Lark_Legacy_LeaveSecretChat" android:layout_marginHorizontal="@dimen/setting_item_margin_horizontal"/>
            <TextView android:textSize="14sp" android:textColor="@color/text_caption" android:layout_gravity="center_horizontal" android:id="@+id/report_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="60dp" android:text="@string/Lark_Chat_Report" android:drawablePadding="4dp" android:drawableStart="@drawable/ic_svg_report_outlined"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
