<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_float_base" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_background="@android:color/transparent"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/filter_messages_rl" android:background="@drawable/editor_tab_item_single_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="8dp" android:paddingStart="10dp" android:paddingEnd="10dp">
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/filter_messages_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Feed_MessageFilter" android:layout_centerVertical="true"/>
                <com.larksuite.component.universe_design.udswitch.UDSwitch android:id="@+id/filter_messages_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:gravity="center_vertical" android:id="@+id/filter_messages_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/Lark_Feed_MessageFilterDesc" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <com.ss.android.lark.setting.page.content.general.feedfilter.FeedTypeFilter android:id="@+id/feed_group_filter" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
