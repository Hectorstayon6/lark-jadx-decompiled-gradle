<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="68dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="76dp" android:layout_height="match_parent">
            <ImageView android:id="@+id/item_icon" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="10dp"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/item_info" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="277">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="17dp" android:textColor="@color/text_title" android:ellipsize="middle" android:id="@+id/item_upload_file_name" android:clickable="true" android:layout_width="match_parent" android:layout_height="24dp" android:layout_marginTop="10dp" android:singleLine="true"/>
                <TextView android:textSize="14dp" android:textColor="@color/text_caption" android:id="@+id/item_upload_file_status" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginTop="2dp" android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="75">
            <com.bytedance.ee.bear.drive.biz.upload.uploadstatuslist.view.uploadlist.UploadListStatusLayout android:id="@+id/uploadlist_status" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
    <View android:layout_gravity="bottom" android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="76dp"/>
</FrameLayout>
