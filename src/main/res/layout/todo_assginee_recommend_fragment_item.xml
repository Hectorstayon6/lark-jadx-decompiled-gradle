<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/title_container" android:background="@color/bg_body_overlay" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_30">
        <TextView android:textSize="@dimen/dp_14" android:textColor="@color/text_title" android:id="@+id/title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/recommend_container" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="@dimen/dp_72">
        <com.larksuite.component.universe_design.checkbox.UDCheckBox android:id="@+id/select_icon" android:padding="0dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_centerVertical="true"/>
        <com.larksuite.component.ui.avatar.v2.LarkAvatarView android:layout_gravity="center_vertical" android:id="@+id/user_avatar" android:layout_width="@dimen/dp_48" android:layout_height="@dimen/dp_48" android:tint="@color/fill_img_mask" android:layout_toRightOf="@+id/select_icon" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dp_12"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_12" android:layout_toRightOf="@+id/user_avatar" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/dp_17" android:textColor="@color/text_title" android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/dp_14" android:textColor="@color/text_caption" android:id="@+id/department_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_4"/>
        </LinearLayout>
        <View android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="@dimen/dp_108" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
