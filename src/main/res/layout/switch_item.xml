            <com.ss.android.lark.widget.SwitcherLoadingView android:id="@+id/mine_device_item_switcher_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/mine_device_item_switcher" android:layout_alignTop="@+id/mine_device_item_switcher" android:layout_alignRight="@+id/mine_device_item_switcher" android:layout_alignBottom="@+id/mine_device_item_switcher"/>
        </RelativeLayout>
    </RelativeLayout>
</merge>
