<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:background="@color/bg_body" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/microapp_m_cover" android:layout_width="72dp" android:layout_height="72dp" android:layout_marginLeft="10dp" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toLeftOf="@+id/microapp_m_indicator" android:layout_toRightOf="@+id/microapp_m_cover" android:layout_centerVertical="true">
        <TextView android:textSize="16sp" android:textColor="@color/text_title" android:id="@+id/microapp_m_name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/text_placeholder" android:ellipsize="middle" android:id="@+id/microapp_m_path" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/microapp_m_size" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true"/>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/microapp_m_indicator" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="10dp" android:layout_marginRight="20dp" android:src="@drawable/microapp_m_default_check" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:tint="@color/primary_pri_500"/>
</RelativeLayout>
