<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="68dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/navigation_view_item_icon" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginStart="16dp"/>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="12dp">
            <TextView android:textSize="17sp" android:textColor="@color/text_title" android:ellipsize="middle" android:id="@+id/navigation_view_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true" android:layout_marginEnd="16dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/navigation_view_item_name">
                <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:id="@+id/tv_capacity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/space_kit_n300" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true" android:layout_marginStart="76dp"/>
</RelativeLayout>
