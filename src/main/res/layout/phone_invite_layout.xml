<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/invite_title" android:layout_width="match_parent" android:layout_height="44dp" app:layout_constraintTop_toTopOf="0">
                <com.ss.android.vc.common.widget.IconFontView android:textSize="24dp" android:textColor="@color/iconfont_black_icon_n800_selector" android:id="@+id/invite_icon_close" android:background="@drawable/icon_bg_item_selector" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="@string/iconfont_icon_close" android:layout_centerVertical="true"/>
                <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="17dp" android:textColor="@color/text_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/View_M_InviteByPhone" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/charging_status_view" android:background="@color/function_info_100" android:visibility="gone" android:layout_width="match_parent" android:layout_height="44dp" app:layout_constraintTop_toBottomOf="@+id/invite_title">
                <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@color/primary_pri_500" android:layout_gravity="center_vertical" android:id="@+id/icon_info" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="16dp" android:text="@string/iconfont_icon_info_solid"/>
                <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="14dp" android:textColor="@color/text_title" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tip_msg" android:layout_width="0px" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:text="@string/View_G_UpgradePlanToExtendPhoneCallLimit" android:singleLine="true" android:layout_weight="1"/>
            </LinearLayout>
            <View android:id="@+id/invite_calling_status_bg" android:layout_width="match_parent" android:layout_height="32dp" android:alpha="0.2" app:layout_constraintTop_toBottomOf="@+id/charging_status_view"/>
            <com.ss.android.vc.common.widget.LineHeightTextView android:gravity="center" android:id="@+id/invite_calling_status_txt" android:layout_width="match_parent" android:layout_height="32dp" app:layout_constraintTop_toBottomOf="@+id/charging_status_view"/>
            <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="16dp" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/invite_sub_title_name" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/pstn_invite_name_margin_top_idle" android:text="@string/View_G_InviteeName" app:layout_constraintTop_toBottomOf="@+id/charging_status_view"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/invite_edit_name_container" android:background="@drawable/invite_edit_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp" app:layout_constraintTop_toBottomOf="@+id/invite_sub_title_name">
                <EditText android:textSize="16dp" android:textColor="@color/text_title" android:textColorHint="@color/text_caption" android:gravity="center_vertical" android:id="@+id/invite_edit_name" android:background="@null" android:paddingLeft="@dimen/dp_12" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/View_G_EnterInviteeName" android:singleLine="true" android:maxLength="32" android:layout_weight="1" android:textCursorDrawable="@drawable/invite_editor_cursor" android:layout_marginEnd="12dp"/>
                <com.ss.android.vc.common.widget.IconFontView android:textSize="20dp" android:textColor="@color/text_caption" android:id="@+id/invite_icon_clear_name" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="14dp" android:layout_marginBottom="14dp" android:text="@string/iconfont_icon_close_solid" android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="16dp" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/invite_sub_title_phone" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginLeft="16dp" android:layout_marginTop="24dp" android:text="@string/View_G_PhoneNumber" app:layout_constraintTop_toBottomOf="@+id/invite_edit_name_container"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/invite_edit_phone_container" android:background="@drawable/invite_edit_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/invite_sub_title_phone">
                <LinearLayout android:orientation="horizontal" android:id="@+id/invite_country_choose_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="16dp" android:textColor="@color/text_title" android:id="@+id/invite_country_code" android:layout_width="48dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="+86"/>
                    <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@color/text_caption" android:id="@+id/invite_icon_choose_country" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_arrow_down" android:layout_marginStart="8dp" android:layout_marginEnd="12dp"/>
                </LinearLayout>
                <View android:background="@color/line_border_component" android:layout_width="1dp" android:layout_height="28dp"/>
                <EditText android:textSize="16dp" android:textColor="@color/text_title" android:textColorHint="@color/text_caption" android:gravity="center_vertical" android:id="@+id/invite_edit_phone_editor" android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:hint="@string/View_G_EnterPhoneNumber" android:singleLine="true" android:maxLength="32" android:layout_weight="1" android:inputType="phone" android:textCursorDrawable="@drawable/invite_editor_cursor"/>
                <com.ss.android.vc.common.widget.IconFontView android:textSize="20dp" android:textColor="@color/icon_n2" android:id="@+id/invite_icon_clear_phone" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_close_solid" android:layout_marginEnd="12dp"/>
            </LinearLayout>
            <FrameLayout android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="28dp" android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/invite_edit_phone_container">
                <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="17dp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/invite_btn_call" android:background="@drawable/invite_call_btn_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/View_VM_CallButton"/>
            </FrameLayout>
            <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="17dp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/invite_btn_cancel" android:background="@drawable/invite_cancel_selector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="16dp" android:layout_marginTop="28dp" android:layout_marginRight="16dp" android:text="@string/View_G_CancelCall" app:layout_constraintTop_toBottomOf="@+id/invite_edit_phone_container"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</merge>
