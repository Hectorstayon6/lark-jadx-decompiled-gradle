<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/live_setting_sub_dialog" android:background="@color/bg_body" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/bottom_action_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/interpretation_operation_container" android:background="@color/bg_body" android:visibility="gone" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="15dp" android:layout_marginRight="16dp" android:layout_marginBottom="19dp">
            <TextView android:textSize="17dp" android:textColor="@drawable/interpretation_stop_text_color_selector" android:gravity="center" android:id="@+id/stop_interpretation" android:background="@drawable/bg_common_red_second_btn_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/View_G_StopButton" android:layout_weight="1" android:layout_marginStart="8dp"/>
            <TextView android:textSize="17dp" android:textColor="@drawable/interpretation_dark_text_color_selector" android:gravity="center" android:id="@+id/interpretation_save_changes" android:background="@drawable/bg_common_btn_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/View_G_SaveChanges" android:layout_weight="1" android:layout_marginStart="16dp"/>
        </LinearLayout>
        <TextView android:textSize="17dp" android:textColor="@drawable/interpretation_dark_text_color_selector" android:gravity="center" android:id="@+id/start_interpretation" android:background="@drawable/bg_common_btn_selector" android:visibility="visible" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginTop="15dp" android:layout_marginRight="16dp" android:layout_marginBottom="19dp" android:text="@string/View_G_StartInterpretation"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/interpretation_manage" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_action_container">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_title" android:layout_width="match_parent" android:layout_height="@dimen/dp_44">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="@dimen/dp_24" android:textColor="@color/iconfont_black_icon_selector" android:id="@+id/close_title" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:scaleType="center" android:text="@string/iconfont_icon_close" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <com.ss.android.vc.common.widget.IconFontView android:textSize="@dimen/dp_24" android:textColor="@color/iconfont_black_icon_selector" android:id="@+id/close_title_arrow" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:scaleType="center" android:text="@string/iconfont_icon_arrow_left" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/dp_17" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="@dimen/dp_24" android:text="@string/View_G_ManageInterpreters" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/interpreter_add_bar" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="16dp">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@drawable/interpretation_add_stroke_selector" android:id="@+id/interpreter_add_image" android:layout_width="16dp" android:layout_height="16dp" android:text="@string/iconfont_icon_more_add" android:layout_centerVertical="true"/>
            <TextView android:textSize="16dp" android:textColor="@drawable/interpretation_add_stroke_selector" android:id="@+id/interpreter_add_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/View_G_AddInterpreter" android:layout_toRightOf="@+id/interpreter_add_image" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/fl_participant_list_container" android:layout_width="match_parent" android:layout_height="match_parent">
            <ListView android:id="@+id/interpreter_list" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@color/vc_transparent" android:cacheColorHint="#00000000" android:divider="@null"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
