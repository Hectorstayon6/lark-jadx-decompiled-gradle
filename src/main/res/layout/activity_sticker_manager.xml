<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_base" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/titlebar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_title="@string/Lark_Legacy_StickerManager"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <com.ss.android.lark.widget.recyclerview.CommonRecyclerView android:id="@+id/grid" android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/backgroundLinearLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/kongyemian"/>
            <TextView android:textSize="14sp" android:textColor="@color/text_caption" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Lark_Legacy_CurrentPageEmpty"/>
        </LinearLayout>
    </FrameLayout>
    <View android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="16sp" android:textColor="@color/sticker_bottom_pin_textcolor_selector" android:gravity="center_vertical" android:layout_gravity="left" android:id="@+id/pin" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/Lark_Legacy_ReorderToTop"/>
        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/sticker_bottom_delete_textcolor_selector" android:gravity="center_vertical" android:layout_gravity="right" android:id="@+id/delete" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/Lark_Legacy_Delete"/>
    </LinearLayout>
</LinearLayout>
