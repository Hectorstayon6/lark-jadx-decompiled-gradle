<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/user_protocol_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="40dp">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_weight="1" android:overScrollMode="never">
        <LinearLayout android:orientation="vertical" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/lkui_N900" android:id="@+id/dialog_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_DialogTitle"/>
            <com.ss.android.lark.widget.richtext.RichTextView android:textSize="14dp" android:textColor="@color/lkui_N900" android:id="@+id/user_ptocol_content" android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" app:highlightColor="@color/color_transparent" app:lineSpacingExtra="8dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:id="@+id/user_ptocol_check_group" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <ImageButton android:id="@+id/user_ptocol_check_icon" android:background="@drawable/user_protocol_check_selector" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="14dp" android:textColor="@color/lkui_N600" android:id="@+id/user_ptocol_check_text" android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="@string/Lark_Legacy_Terms"/>
    </LinearLayout>
    <View android:id="@+id/user_ptocol_confirm_divider" android:background="@color/lkui_N400" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="20dp"/>
    <TextView android:textSize="17sp" android:textColor="@color/lkui_N400" android:gravity="center" android:id="@+id/user_ptocol_confirm" android:layout_width="match_parent" android:layout_height="50.5dp" android:text="@string/Lark_Legacy_Agree"/>
</LinearLayout>
