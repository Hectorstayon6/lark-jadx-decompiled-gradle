<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f4f4f4" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/microapp_m_game_titlebar"/>
    <View android:background="@color/microapp_m_keyboard_edittext_bg_stroke_color" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:background="@color/microapp_m_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                <com.tt.miniapp.view.RoundedImageView android:layout_gravity="center_horizontal" android:id="@+id/microapp_m_iv_icon" android:layout_width="66dp" android:layout_height="66dp" android:layout_marginTop="35dp" android:scaleType="centerCrop"/>
                <TextView android:textSize="18sp" android:textColor="@color/microapp_m_ssxinheihui1" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/microapp_m_tv_name" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginTop="8dp" android:text="@string/microapp_m_microapp"/>
                <TextView android:textSize="14sp" android:textColor="@color/microapp_m_ssxinheihui3" android:layout_gravity="center_horizontal" android:id="@+id/microapp_m_tv_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/microapp_m_service_category" android:background="@color/microapp_m_white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@color/microapp_m_ssxinheihui1" android:id="@+id/microapp_m_about_service_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginRight="31dp" android:layout_marginBottom="13dp" android:text="@string/microapp_m_about_service_category"/>
                    <TextView android:textSize="16sp" android:textColor="@color/microapp_m_ssxinheihui3" android:id="@+id/tv_miniapp_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginBottom="13dp"/>
                </LinearLayout>
                <View android:background="@color/microapp_m_dark_divider" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ly_subject_information" android:background="@color/microapp_m_white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@color/microapp_m_ssxinheihui1" android:id="@+id/microapp_m_about_subject_information" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginRight="31dp" android:layout_marginBottom="13dp" android:text="@string/microapp_m_about_subject_information"/>
                    <TextView android:textSize="16sp" android:textColor="@color/microapp_m_ssxinheihui3" android:id="@+id/microapp_m_tv_subject_infor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginRight="5dp" android:layout_marginBottom="13dp" android:singleLine="true" android:layout_weight="1"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/microapp_m_iv_info_goto" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:src="0x7f080ed4"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/microapp_m_headline_platform" android:background="@color/microapp_m_white" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/microapp_m_dark_divider" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                <LinearLayout android:orientation="horizontal" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@color/microapp_m_ssxinheihui1" android:id="@+id/microapp_m_about_headline_platform" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginRight="15dp" android:layout_marginBottom="13dp" android:text="@string/microapp_m_about_headline_platform"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/microapp_m_headline_platform_icon" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="13dp" android:layout_marginRight="5dp" android:layout_marginBottom="13dp" android:layout_weight="1">
                        <com.tt.miniapp.view.RoundedImageView android:id="@+id/microapp_m_headline_platform_icon_0" android:layout_width="24dp" android:layout_height="24dp" android:scaleType="centerCrop"/>
                        <TextView android:textSize="16sp" android:textColor="@color/microapp_m_ssxinheihui3" android:layout_gravity="center_vertical" android:id="@+id/microapp_m_headline_platform_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/microapp_m_headline_platform_goto" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:src="0x7f080ed4"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:textSize="18sp" android:textColor="@color/microapp_m_white" android:layout_gravity="center_horizontal" android:id="@+id/microapp_m_btn_back" android:background="@drawable/microapp_m_btn_red_normal" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="15dp" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:text="@string/microapp_m_about_back_miniapp" android:stateListAnimator="@null"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
