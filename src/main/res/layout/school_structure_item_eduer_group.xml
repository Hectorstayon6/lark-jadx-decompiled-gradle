<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/school_item_layout" android:background="@drawable/item_bg_selector_c16" android:layout_width="match_parent" android:layout_height="68dp" android:animateLayoutChanges="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="17dp">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="end" android:gravity="top" android:id="@+id/school_parent_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
                <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:gravity="top" android:id="@+id/school_parent_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0.5dp" android:maxLines="1"/>
            </LinearLayout>
            <ImageView android:id="@+id/image_in" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/contacts_nextlevel_arrow" android:tint="@color/icon_n3"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/divider_next_school" android:background="@color/bg_base" android:visibility="gone" android:layout_width="match_parent" android:layout_height="6dp"/>
    <View android:id="@+id/divider_next_eduer" android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp"/>
</LinearLayout>
