<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="1dp" android:paddingEnd="1dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/icon" android:layout_width="16dp" android:layout_height="16dp"/>
        <TextView android:textSize="11sp" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:layout_marginStart="4dp"/>
    </LinearLayout>
    <FrameLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="@dimen/bitable_field_link_content_height" android:layout_marginTop="4dp"/>
</LinearLayout>
