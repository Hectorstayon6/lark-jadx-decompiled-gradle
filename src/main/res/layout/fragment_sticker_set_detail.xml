<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/sticker_set_detail_container" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/sticker_set_view_detail_titlebar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_back_icon="@drawable/titlebar_back_bg_selector" app:tb_title_color="@color/text_title"/>
    <FrameLayout android:id="@+id/sticker_set_detail_loading" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/sticker_set_view_detail_titlebar"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/sticker_set_scv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_below="@+id/sticker_set_view_detail_titlebar">
        <LinearLayout android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/sticker_set_iv_bg" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="190dp" android:src="@drawable/ic_sticker_set_detail_bg" android:scaleType="centerCrop"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textColor="@color/text_title" android:id="@+id/sticker_set_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="@dimen/dp_16" android:layout_alignParentLeft="true"/>
                <com.larksuite.component.ui.button.LKUIButton android:textSize="14sp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/sticker_set_tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:layout_marginRight="@dimen/dp_16" android:layout_alignParentRight="true" app:button_style="4"/>
                <ProgressBar android:id="@+id/sticker_set_pb_download" android:visibility="gone" android:layout_width="60dp" android:layout_height="3dp" android:layout_marginTop="@dimen/dp_28" android:layout_marginRight="@dimen/dp_16" android:progressDrawable="@drawable/sticker_set_download_progressbar" android:layout_alignParentRight="true" style="?android:attr/progressBarStyleHorizontal"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:id="@+id/sticker_set_tv_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:layout_marginTop="12dp" android:layout_marginRight="20dp"/>
            <View android:id="@+id/sticker_set_view_line" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginTop="16dp"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/sticker_set_rv_stickers" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:overScrollMode="never" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/sticker_set_ll_empty" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/sticker_set_view_detail_titlebar">
        <ImageView android:layout_gravity="center" android:id="@+id/sticker_set_detail_error_icon" android:layout_width="125dp" android:layout_height="125dp" android:src="@drawable/illustration_empty_negative_load_failed"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_placeholder" android:layout_gravity="center" android:id="@+id/sticker_set_detail_error_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/Lark_Chat_StickerPackNoStickerPack"/>
    </LinearLayout>
</RelativeLayout>
