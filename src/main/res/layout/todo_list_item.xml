<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/todo_item_click_selector" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/todo_item_checkbox" android:layout_width="56dp" android:layout_height="52dp">
            <androidx.appcompat.widget.AppCompatCheckBox android:textColor="@color/space_kit_black" android:layout_gravity="center_horizontal" android:id="@+id/checkbox_item" android:background="@null" android:layout_width="24dp" android:layout_height="24dp" android:button="@null" android:drawableStart="@drawable/todo_item_checkbox_selector"/>
            <ProgressBar android:layout_gravity="center_horizontal" android:id="@+id/todo_item_loading" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="2dp" android:indeterminate="true" android:indeterminateTint="@color/facade_colorAccent" style="?android:attr/progressBarStyleSmall"/>
        </FrameLayout>
        <com.bytedance.ee.bear.todocenter.ui.widget.TodoRichTextView android:textSize="16sp" android:textColor="@color/space_kit_n900" android:ellipsize="end" android:id="@+id/todo_item_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="10" android:scrollHorizontally="false" android:includeFontPadding="false" android:layout_marginStart="52dp" android:layout_marginEnd="16dp" android:breakStrategy="0"/>
        <TextView android:textSize="14sp" android:textColor="@color/space_kit_n600" android:ellipsize="end" android:id="@+id/todo_item_source" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:lines="1" android:singleLine="true" android:drawablePadding="3.5dp" android:layout_below="@+id/todo_item_content" android:drawableStart="@drawable/icon_file_doc_colorful" android:layout_marginStart="50dp" android:layout_alignEnd="@+id/todo_item_content"/>
        <View android:id="@+id/todo_item_divider" android:background="@color/space_kit_n300" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="12dp" android:layout_below="@+id/todo_item_source" android:layout_alignStart="@+id/todo_item_source"/>
    </RelativeLayout>
    <Space android:id="@+id/item_space" android:visibility="gone" android:layout_width="match_parent" android:layout_height="25dp"/>
</LinearLayout>
