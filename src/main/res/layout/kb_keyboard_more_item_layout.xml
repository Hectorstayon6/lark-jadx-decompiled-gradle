<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/item_cell_layout" android:clipChildren="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
        <FrameLayout android:layout_gravity="center_horizontal" android:clipChildren="false" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.larksuite.component.ignition.widget.squircle.SquircleImageView android:id="@+id/item_icon" android:layout_width="52dp" android:layout_height="52dp" android:scaleType="center" app:border_width="0dp" app:radius="12dp"/>
            <ImageView android:layout_gravity="end" android:id="@+id/item_icon_red_dot" android:visibility="visible" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="-4dp" android:src="@drawable/item_red_dot" android:layout_marginEnd="-4dp"/>
        </FrameLayout>
        <TextView android:textSize="12sp" android:textColor="@color/text_caption" android:ellipsize="end" android:gravity="top|center_vertical|center_horizontal|center" android:layout_gravity="center_horizontal" android:id="@+id/item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:minHeight="32dp" android:maxLines="2"/>
    </LinearLayout>
</RelativeLayout>
