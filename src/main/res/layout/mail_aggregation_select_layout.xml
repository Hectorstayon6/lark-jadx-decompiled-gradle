<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_banner" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/title_banner" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/UDText.Body0" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/mail_label_close" android:paddingLeft="16dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="44dp" android:text="@string/Mail_Alert_Cancel" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/text_title" android:id="@+id/mail_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Mail_CustomLabels_MoveTo" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
