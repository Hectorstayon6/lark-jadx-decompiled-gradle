<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/video_cover" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent" android:transitionName="show_video_share_element"/>
    <ImageView android:layout_gravity="center" android:id="@+id/play_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play" android:contentDescription="@string/Lark_Legacy_PlayVideoButton"/>
    <FrameLayout android:id="@+id/controller_top_layout" android:background="@drawable/video_control_top_bg" android:layout_width="match_parent" android:layout_height="68dp">
        <ImageView android:id="@+id/ctrl_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="8dp" android:src="@drawable/video_ctrl_close"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_gravity="bottom" android:id="@+id/controller_bottom_layout" android:background="@drawable/action_menu_gradient" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="80dp">
        <TextView android:textSize="14sp" android:textColor="@color/lkui_N00" android:gravity="right" android:id="@+id/current_play_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <androidx.appcompat.widget.AppCompatImageView android:gravity="center" android:id="@+id/video_menu" android:background="@drawable/action_menu_bg" android:padding="@dimen/dp_4" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="@dimen/dp_16" android:tint="@color/ud_N00" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ud_icon_more_outlined"/>
        <androidx.appcompat.widget.AppCompatImageView android:gravity="center" android:id="@+id/iv_view_chat_image" android:background="@drawable/action_menu_bg" android:padding="@dimen/dp_4" android:visibility="gone" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="@dimen/dp_16" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/video_menu" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ud_icon_photo_album_filled" app:tint="@color/ud_N00"/>
        <TextView android:textSize="14sp" android:textColor="@color/lkui_N00" android:gravity="left" android:id="@+id/video_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_18" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/iv_view_chat_image" app:layout_constraintTop_toTopOf="0"/>
        <SeekBar android:id="@+id/video_seek" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginRight="11dp" android:maxHeight="4dp" android:progressDrawable="@drawable/video_seek_bar" android:minHeight="4dp" android:thumb="@drawable/video_seekbar_thumb_normal" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/current_play_time" app:layout_constraintRight_toLeftOf="@+id/video_duration" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
