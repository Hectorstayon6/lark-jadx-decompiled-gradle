<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/background" android:background="@drawable/bg_widget_default" android:padding="@dimen/widget_default_padding" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:background="@drawable/feishu_logo_color" android:layout_width="@dimen/widget_medium_logo_size" android:layout_height="@dimen/widget_medium_logo_size" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="@dimen/widget_text_small_size" android:textColor="@color/widget_week_color" android:gravity="center" android:id="@+id/week" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:lineHeight="@dimen/widget_text_small_height"/>
    <TextView android:textSize="@dimen/widget_text_large_size" android:textColor="@color/widget_day_color" android:gravity="center" android:id="@+id/day" android:layout_width="wrap_content" android:layout_height="@dimen/widget_text_large_height" android:layout_marginTop="@dimen/widget_day_margin_top"/>
    <TextView android:textSize="@dimen/widget_text_small_size" android:textColor="@color/widget_remind_time_color" android:id="@+id/remind_time" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/widget_remind_time_top_margin" android:layout_below="@+id/day" android:lineHeight="@dimen/widget_text_small_height"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/bg_widget_calendar_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/widget_text_medium_size" android:textStyle="bold" android:textColor="@color/widget_day_color" android:ellipsize="end" android:gravity="start" android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_marginStart="@dimen/widget_small_text_left_margin" android:lineHeight="@dimen/widget_text_medium_height"/>
        <TextView android:textSize="@dimen/widget_text_small_size" android:textColor="@color/widget_day_color" android:gravity="start" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/name" android:layout_marginStart="@dimen/widget_small_text_left_margin" android:lineHeight="@dimen/widget_text_small_height"/>
        <TextView android:textSize="@dimen/widget_text_small_size" android:textColor="@color/widget_remind_time_color" android:gravity="left" android:id="@+id/time_range" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/subtitle" android:layout_marginStart="@dimen/widget_small_text_left_margin" android:lineHeight="@dimen/widget_text_small_height"/>
    </LinearLayout>
</RelativeLayout>
