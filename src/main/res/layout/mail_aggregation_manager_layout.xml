<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/mail_aggregation_manager_title" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="44dp">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mail_label_close" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="16dp" android:src="@drawable/ud_icon_close_small_outlined" android:scaleType="fitCenter" android:tint="@color/mail_ic_back_selector_color" android:layout_centerVertical="true"/>
        <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/text_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Mail_Folder_FolderManageMobile" android:singleLine="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.larksuite.component.universe_design.tab.UDTabLayout android:id="@+id/mail_aggregation_manager_tab" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/mail_aggregation_manager_title"/>
    <androidx.viewpager.widget.ViewPager android:id="@+id/mail_aggregation_manager_view_pager" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/mail_aggregation_manager_tab"/>
</RelativeLayout>
