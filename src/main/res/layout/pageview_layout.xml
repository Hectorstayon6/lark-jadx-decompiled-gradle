<?xml version="1.0" encoding="utf-8"?>
<com.bytedance.ee.bear.widgets.MaxSizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.bytedance.ee.bear.widgets.panel.CommonActionPanelLayout android:id="@+id/title_panel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <RelativeLayout android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_panel">
                <TextView android:textSize="@dimen/more_pageview_subtitle" android:textColor="@color/text_placeholder" android:id="@+id/document_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_below="@+id/divider" android:layout_marginStart="24dp"/>
                <TextView android:textSize="@dimen/more_pageview_document_title" android:textColor="@color/text_title" android:id="@+id/document_title_details" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/document_title" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
                <TextView android:textSize="@dimen/more_pageview_subtitle" android:textColor="@color/text_placeholder" android:id="@+id/title_owner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="27dp" android:text="@string/Doc_More_DocumentOwner" android:layout_below="@+id/document_title_details" android:layout_marginStart="24dp"/>
                <LinearLayout android:gravity="center_vertical" android:id="@+id/owner_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/title_owner" android:layout_alignStart="@+id/title_owner">
                    <com.larksuite.component.universe_design.image.UDAvatar android:id="@+id/owner_avatar" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/facade_common_avatar_place_holder" android:scaleType="fitCenter" app:ud_avatar_borderWidth="0dp" app:ud_avatar_size="-3" style="@style/UDAvatar.Circle"/>
                    <TextView android:textSize="@dimen/more_pageview_creation_value" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/owner_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/more_pageview_subtitle" android:textColor="@color/text_placeholder" android:id="@+id/title_creation_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/Doc_More_CreationTime" android:layout_below="@+id/owner_info" android:layout_marginStart="24dp"/>
                <LinearLayout android:gravity="center_vertical" android:id="@+id/creation_time_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/title_creation_time" android:layout_alignStart="@+id/title_creation_time">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/more_creation_time" android:scaleType="fitCenter"/>
                    <TextView android:textSize="@dimen/more_pageview_creation_value" android:textColor="@color/text_title" android:gravity="center_vertical" android:id="@+id/creation_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/more_pageview_subtitle" android:textColor="@color/text_placeholder" android:id="@+id/title_subhead_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_below="@+id/creation_time_info"/>
                <LinearLayout android:id="@+id/word_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:weightSum="3" android:layout_below="@+id/title_subhead_1" android:layout_alignLeft="@+id/title_subhead_1">
                    <TextView android:textSize="@dimen/more_pageview_document_value" android:textColor="@color/text_title" android:id="@+id/title_subhead_value_2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/more_pageview_document_value" android:textColor="@color/text_title" android:id="@+id/title_subhead_value_3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/word_description_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:weightSum="3" android:layout_below="@+id/word_ll" android:layout_alignLeft="@+id/word_ll">
                    <TextView android:textSize="@dimen/more_pageview_level3_title" android:textColor="@color/text_placeholder" android:id="@+id/title_subhead_2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/more_pageview_level3_title" android:textColor="@color/text_placeholder" android:id="@+id/title_subhead_3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/more_pageview_subtitle" android:textColor="@color/text_placeholder" android:id="@+id/activity" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:text="@string/Doc_More_ActivitytStatistics" android:layout_below="@+id/word_description_ll"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/activity_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:weightSum="3" android:layout_below="@+id/activity" android:layout_alignLeft="@+id/activity">
                    <TextView android:textSize="@dimen/more_pageview_document_value" android:textColor="@color/text_title" android:id="@+id/read_people_num_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/more_pageview_document_value" android:textColor="@color/text_title" android:id="@+id/read_num_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/more_pageview_document_value" android:textColor="@color/text_title" android:id="@+id/like_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/activity_description_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:weightSum="3" android:layout_below="@+id/activity_ll" android:layout_alignLeft="@+id/activity_ll">
                    <TextView android:textSize="@dimen/more_pageview_level3_title" android:textColor="@color/text_placeholder" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Doc_More_ReaderCount" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/more_pageview_level3_title" android:textColor="@color/text_placeholder" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Doc_More_ReadingCount" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/more_pageview_level3_title" android:textColor="@color/text_placeholder" android:id="@+id/like_description_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Doc_More_ThumbUpCount" android:layout_weight="1"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="24dp" android:layout_below="@+id/activity_description_ll"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</com.bytedance.ee.bear.widgets.MaxSizeLinearLayout>
