    <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/titleBar">
