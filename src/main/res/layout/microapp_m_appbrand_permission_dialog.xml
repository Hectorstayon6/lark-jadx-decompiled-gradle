<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/microapp_m_transparent" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_bg" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="16dp">
        <com.tt.miniapp.component.nativeview.game.RoundedImageView android:id="@+id/iv_blurred_bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/iv_blurred_bg_shade" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/microapp_m_shape_permission_dialog_circular_corner_4dp_white"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_miniapp_icon" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <com.tt.miniapp.component.nativeview.game.RoundedImageView android:id="@+id/iv_miniapp_icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="-16dp" android:scaleType="fitXY"/>
            <TextView android:textSize="@dimen/microapp_m_text_size_16" android:textColor="@color/microapp_m_black_4" android:ellipsize="end" android:gravity="bottom" android:layout_gravity="bottom" android:id="@+id/tv_miniapp_name" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="1" android:includeFontPadding="false" android:layout_marginStart="12dp"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/fl_permission_desc_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ll_miniapp_icon" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <LinearLayout android:id="@+id/microapp_m_permission_bottom_button_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_below="@+id/fl_permission_desc_container" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <TextView android:textSize="@dimen/microapp_m_text_size_16" android:textColor="@color/microapp_m_black" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/microapp_m_shape_bt_circular_corner_4dp_black_8" android:layout_width="0dp" android:layout_height="48dp" android:text="@string/microapp_m_permission_cancel" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/microapp_m_text_size_16" android:textColor="@color/microapp_m_white" android:gravity="center" android:id="@+id/tv_allow" android:background="@drawable/microapp_m_shape_bt_circular_corner_4dp_red" android:layout_width="0dp" android:layout_height="48dp" android:foreground="@drawable/microapp_m_selector_bt_shade" android:text="@string/microapp_m_brand_permission_ok" android:layout_weight="1" android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/microapp_m_permission_privacy_policy" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="20dp" android:layout_below="@+id/microapp_m_permission_bottom_button_container" android:layout_centerHorizontal="true">
            <TextView android:textSize="@dimen/microapp_m_text_size_12" android:textColor="@color/microapp_m_black_4" android:ellipsize="end" android:id="@+id/tv_privacy_policy_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="140dp" android:maxLines="1" android:includeFontPadding="false"/>
            <TextView android:textSize="@dimen/microapp_m_text_size_12" android:textColor="@color/microapp_m_black_4" android:id="@+id/tv_privacy_policy_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/microapp_m_permission_privacy_policy" android:includeFontPadding="false"/>
            <ImageView android:layout_width="5dp" android:layout_height="9dp" android:src="@drawable/microapp_m_permission_privacy_policy_icon" android:layout_marginStart="6dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
