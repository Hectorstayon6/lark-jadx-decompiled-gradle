                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.ss.android.lark.keyboard.widget.SysKeyBoardObserveFrameLayout>
    <FrameLayout android:id="@+id/todo_feature_fragment_container" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/loading_container" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="44dp"/>
</FrameLayout>
