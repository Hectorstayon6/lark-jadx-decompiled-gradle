                <com.larksuite.component.universe_design.button.UDButton android:textColor="@color/primary_pri_500" android:id="@+id/only_assignee_or_create_done_btn" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp_12" android:layout_marginRight="@dimen/dp_16" android:layout_toRightOf="@+id/comment_btn" app:ud_backgroundColor="@color/ud_button_white_blue_bg" app:ud_radius="2" app:ud_strokeColor="@color/primary_pri_500" app:ud_strokeWidth="1dp" style="@style/UDButton.Default"/>
                <com.larksuite.component.universe_design.button.UDButton android:textColor="@color/text_title" android:id="@+id/only_follower_follow_btn" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp_12" android:layout_marginRight="@dimen/dp_16" android:layout_toRightOf="@+id/comment_btn" app:ud_backgroundColor="@color/ud_button_white_grey_bg" app:ud_radius="2" app:ud_strokeColor="@color/line_border_component" app:ud_strokeWidth="1dp" style="@style/UDButton.Default"/>
                <RelativeLayout android:id="@+id/creator_assignee_done_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dp_12" android:layout_marginRight="@dimen/dp_16" android:layout_toRightOf="@+id/comment_btn">
                    <View android:id="@+id/center_placeholder" android:layout_width="0dp" android:layout_height="0dp" android:layout_centerHorizontal="true"/>
                    <com.larksuite.component.universe_design.button.UDButton android:textColor="@color/text_title" android:id="@+id/create_assignee_done_btn" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="@dimen/dp_6" android:layout_toLeftOf="@+id/center_placeholder" app:ud_backgroundColor="@color/ud_button_white_grey_bg" app:ud_radius="2" app:ud_strokeColor="@color/line_border_component" app:ud_strokeWidth="1dp" style="@style/UDButton.Default"/>
