<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/MessageCard">
    <RelativeLayout android:id="@+id/title_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
        <LinearLayout android:orientation="horizontal" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="66dp" android:paddingHorizontal="12dp">
            <ImageView android:id="@+id/vote_icon" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="4dp" android:src="@drawable/ud_icon_vote_filled" android:scaleType="centerInside" android:tint="@color/udtoken_message_card_text_indigo" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="8dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/udtoken_message_card_text_indigo" android:id="@+id/title_tv" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/vote_icon" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="12sp" android:textColor="@color/udtoken_message_card_text_indigo" android:id="@+id/select_type_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" app:layout_constraintStart_toEndOf="@+id/vote_icon" app:layout_constraintTop_toBottomOf="@+id/title_tv" app:layout_constraintVertical_bias="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/options_rv" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_layout" android:overScrollMode="never" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/title_layout"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/participant_number_layout" android:paddingLeft="12dp" android:paddingTop="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_below="@+id/options_rv" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/options_rv">
        <TextView android:textSize="12sp" android:textColor="@color/text_title" android:id="@+id/actual_participant_number_tv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/text_title" android:id="@+id/number_of_participants_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
    </LinearLayout>
    <com.larksuite.component.universe_design.button.UDButton android:textSize="14sp" android:textColor="@color/ud_button_grey_text" android:gravity="center" android:id="@+id/action_btn" android:layout_width="0dp" android:layout_height="32dp" android:layout_margin="12dp" android:layout_below="@+id/participant_number_layout" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/options_rv" app:ud_backgroundColor="@color/ud_button_white_grey_bg" app:ud_strokeColor="@color/line_border_component" app:ud_strokeWidth="1dp" style="@style/UDButton.Big.Column"/>
</androidx.constraintlayout.widget.ConstraintLayout>
