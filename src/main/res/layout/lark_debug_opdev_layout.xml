<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/lark_debug_opdev_bg" android:layout_width="180dp" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/debug_status_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lark_debug_connect_success" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="@color/N00" android:id="@+id/debug_status_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/OpenPlatform_RealdeviceDebug_connected" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/debug_status_icon"/>
        <ImageView android:id="@+id/debug_connect_status_expand" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/lark_debug_expand_down_filled" android:scaleType="center" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/debug_expand_divider" android:background="@color/microapp_m_white_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <FrameLayout android:id="@+id/debug_close_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
        <Button android:textSize="12sp" android:textColor="@color/lkui_N300" android:layout_gravity="center_vertical" android:id="@+id/debug_close_button" android:background="@drawable/lark_debug_opdev_action_button_bg" android:layout_width="match_parent" android:layout_height="28dp" android:text="@string/OpenPlatform_RealdeviceDebug_enddebug" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </FrameLayout>
</LinearLayout>
