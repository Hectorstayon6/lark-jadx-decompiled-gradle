<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/place_hold_view" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <RelativeLayout android:id="@+id/tab_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="53dp">
        <View android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentTop="true"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16dp" android:textColor="@color/primary_pri_500" android:gravity="center" android:id="@+id/date_tab" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/Lark_Legacy_ChooseDate" android:layout_weight="1"/>
            <View android:id="@+id/tab_divider" android:background="@color/line_divider_default" android:layout_width="0.5dp" android:layout_height="match_parent" android:layout_below="@+id/content_layout"/>
            <TextView android:textSize="16dp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/time_tab" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/Lark_Legacy_ChooseTime" android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
