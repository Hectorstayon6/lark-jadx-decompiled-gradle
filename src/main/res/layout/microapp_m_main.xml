    <androidx.recyclerview.widget.RecyclerView android:id="@+id/microapp_m_recycler_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/microapp_m_footer" android:layout_below="@+id/microapp_m_top"/>
</RelativeLayout>
