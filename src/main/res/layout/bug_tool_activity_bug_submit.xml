<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_title_name" android:layout_width="110dp" android:layout_height="40dp" android:text="缺陷名称"/>
            <EditText android:textSize="16sp" android:textColor="#ff101010" android:textColorHint="#ffcecece" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/bug_tool_et_title" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:hint="请输入缺陷名称" android:singleLine="true" android:layout_toEndOf="@+id/bug_tool_tv_title_name" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_priority_name" android:layout_width="110dp" android:layout_height="40dp" android:text="优先级"/>
            <Spinner android:id="@+id/bug_tool_spn_priority" android:background="@null" android:layout_width="200dp" android:layout_height="40dp" android:spinnerMode="dropdown" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_principal_name" android:layout_width="110dp" android:layout_height="40dp" android:text="经办人"/>
            <EditText android:textSize="16sp" android:textColor="#ff101010" android:textColorHint="#ffcecece" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/bug_tool_et_principal" android:background="@null" android:layout_width="wrap_content" android:layout_height="40dp" android:hint="请输入经办人" android:singleLine="true" android:layout_toEndOf="@+id/bug_tool_tv_principal_name" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_business_name" android:layout_width="110dp" android:layout_height="40dp" android:text="业务线"/>
            <Spinner android:id="@+id/bug_tool_spn_business" android:background="@null" android:layout_width="200dp" android:layout_height="40dp" android:spinnerMode="dialog" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_severity_level_name" android:layout_width="110dp" android:layout_height="40dp" android:text="缺陷严重程度"/>
            <Spinner android:id="@+id/bug_tool_spn_severity_level" android:background="@null" android:layout_width="200dp" android:layout_height="40dp" android:spinnerMode="dropdown" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_discover_stage_name" android:layout_width="110dp" android:layout_height="40dp" android:text="缺陷发现阶段"/>
            <Spinner android:id="@+id/bug_tool_spn_discover_stage" android:background="@null" android:layout_width="200dp" android:layout_height="40dp" android:spinnerMode="dialog" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <TextView android:textSize="16sp" android:textColor="#ff101010" android:gravity="center_vertical" android:id="@+id/bug_tool_tv_description_name" android:layout_width="110dp" android:layout_height="40dp" android:text="缺陷描述"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
            <EditText android:textSize="16sp" android:textColor="#ff101010" android:textColorHint="#ffcecece" android:gravity="top" android:id="@+id/bug_tool_et_description" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="180dp" android:text="@string/bug_tool_description_template" android:hint="请输入缺陷描述"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="80dp" android:weightSum="4">
            <Button android:textSize="15sp" android:textColor="#ffffffff" android:id="@+id/bug_tool_btn_submit" android:background="#ff1890ff" android:layout_width="0dp" android:layout_height="40dp" android:text="提交" android:layout_weight="3" android:onClick="onSubmit"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
