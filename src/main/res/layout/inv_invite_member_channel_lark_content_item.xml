<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dp_16" android:layout_marginEnd="@dimen/dp_16">
    <View android:id="@+id/imcContentDividerTop" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_16"/>
    <View android:id="@+id/imcContentDividerView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_16"/>
    <View android:id="@+id/imcContentDividerLarkView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_16"/>
    <RelativeLayout android:id="@+id/imcContentLayout" android:background="@drawable/inv_invite_channel_lark_content_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="68dp">
        <View android:id="@+id/imcContentIconView" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_centerVertical="true"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/imcContentGo" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="16dp" android:src="@drawable/ud_icon_right_bold_outlined" android:tint="@color/icon_n3" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/imcContentWithIconLl" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_toLeftOf="@+id/imcContentGo" android:layout_toRightOf="@+id/imcContentIconView" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/imcContentWithIconTitleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            <com.ss.android.lark.inv.export.ui.EmptyGoneTextView android:textSize="12sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/imcContentWithIconSubTitleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/imcContentWithoutIconLl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_toLeftOf="@+id/imcContentGo" android:layout_toRightOf="@+id/imcContentIconView" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="middle" android:id="@+id/imcContentWithoutIconLeftTv" android:layout_width="100dp" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/function_info_500" android:id="@+id/imcContentWithoutIconRightTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/imcContentDividerBottom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_16"/>
</LinearLayout>
