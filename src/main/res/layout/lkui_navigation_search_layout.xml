<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/lkui_searchview_default_height" android:animateLayoutChanges="true">
    <View android:id="@+id/placeHolder" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/lkui_B500" android:gravity="center" android:id="@+id/cancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_Cancel" android:layout_centerVertical="true" android:layout_marginStart="12dp" android:layout_toStartOf="@+id/placeHolder"/>
    <ImageView android:id="@+id/search_titlebar_left" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/lkui_navigation_back" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
    <RelativeLayout android:id="@+id/input_layout" android:background="@drawable/lkui_navigation_searchview_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="@dimen/lkui_searchview_default_height" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/cancel" android:layout_toEndOf="@+id/search_titlebar_left">
        <ImageView android:id="@+id/drawable_left" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/lkui_navigation_search" android:scaleType="centerInside" android:layout_centerVertical="true" android:layout_marginStart="8dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/text_title" android:id="@+id/hint_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_Search" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/drawable_left"/>
        <com.larksuite.component.ui.navigation.LKUIClearEditText android:textSize="14sp" android:textColor="@color/text_title" android:textColorHint="@color/text_placeholder" android:gravity="center_vertical" android:id="@+id/input_view" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/Lark_Legacy_Search" android:layout_centerVertical="true" android:paddingEnd="8dp" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/drawable_left"/>
    </RelativeLayout>
    <ImageView android:id="@+id/drawable_right" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/lkui_navigation_search" android:scaleType="centerInside" android:layout_centerVertical="true" android:layout_marginEnd="12dp" android:layout_toStartOf="@+id/cancel"/>
</RelativeLayout>
