<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:id="@+id/container" android:background="@drawable/widget_confirm_dialog_round_corner" android:layout_width="260dp" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/lkui_N900" android:id="@+id/title" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
        <TextView android:textSize="17sp" android:textColor="@color/lkui_N900" android:id="@+id/content" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="24dp"/>
        <View android:id="@+id/horizontal_line" android:background="@color/lkui_N300" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="52dp" android:showDividers="middle">
            <TextView android:textSize="16sp" android:textColor="@color/lkui_N900" android:gravity="center" android:id="@+id/left" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <View android:id="@+id/view_line" android:background="@color/lkui_N300" android:layout_width="0.5dp" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@color/lkui_N900" android:gravity="center" android:id="@+id/right" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="9dp" android:src="@drawable/widget_dialog_close_ic" android:layout_alignParentRight="true"/>
</RelativeLayout>
