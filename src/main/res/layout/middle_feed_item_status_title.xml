<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/divider" android:background="@color/bg_body_overlay" android:layout_width="match_parent" android:layout_height="4dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/quote_layout" android:layout_width="match_parent" android:layout_height="48dp">
        <com.bytedance.ee.bear.middleground.comment.widget.CommentTextView android:textSize="16sp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/tv_content" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="0dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/text_link_hover" android:id="@+id/tv_open" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Doc_Feed_ReOpen" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <View android:id="@+id/quote_layout_divider" android:background="@color/space_kit_divider_color" android:layout_width="match_parent" android:layout_height="0.5dp"/>
</LinearLayout>
