<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/item" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.ss.android.lark.mm.widget.avatar.Avatar android:id="@+id/ivCover" android:layout_width="120dp" android:layout_height="68dp" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_marginEnd="12dp" app:avatar_borderStyle="1" app:avatar_cornerRadius="6dp" app:srcCompat="@drawable/mm_ic_list_video"/>
        <View android:background="@drawable/mm_bg_list_shadow" android:layout_width="120dp" android:layout_height="68dp" android:layout_alignBottom="@+id/ivCover" android:layout_centerVertical="true" android:layout_alignEnd="@+id/ivCover"/>
        <com.ss.android.lark.mm.widget.BoldTextView android:textSize="10dp" android:textColor="@color/static_white" android:ellipsize="end" android:id="@+id/tvRecordingDuration" android:background="@drawable/mm_bg_record_duration" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:maxLines="1" android:singleLine="true" android:layout_alignBottom="@+id/ivCover" android:layout_marginEnd="6dp" android:layout_alignEnd="@+id/ivCover"/>
        <com.ss.android.lark.mm.widget.BoldTextView android:textSize="10dp" android:textColor="@color/static_white" android:ellipsize="end" android:id="@+id/tvDuration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:maxLines="1" android:singleLine="true" android:layout_alignBottom="@+id/ivCover" android:layout_marginEnd="8dp" android:layout_alignEnd="@+id/ivCover" android:textFontWeight="500"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_toEndOf="@+id/ivCover">
            <com.ss.android.lark.mm.widget.BoldTextView android:textSize="16dp" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/tvTopic" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:textFontWeight="400"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tvTopic">
                <com.larksuite.component.ui.imageview.LKUILottieAnimationView android:id="@+id/ivBadge" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginTop="1dp" android:layout_marginEnd="4dp"/>
                <com.ss.android.lark.mm.widget.BoldTextView android:textSize="13dp" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/tvStatus" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:layout_marginEnd="6dp"/>
                <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/homeDesLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12dp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/tvOwner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true"/>
                    <View android:id="@+id/divider" android:background="@color/line_divider_default" android:layout_width="1dp" android:layout_height="10dp" android:layout_marginTop="1dp" android:layout_marginStart="6dp"/>
                    <TextView android:textSize="12dp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:layout_marginStart="6dp"/>
                </LinearLayout>
                <com.ss.android.lark.mm.widget.BoldTextView android:textSize="12dp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/tvDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="14dp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/menuLeft" android:background="@color/ud_N400" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="26dp" android:paddingEnd="26dp" android:textFontWeight="500"/>
        <TextView android:textSize="14dp" android:textColor="@color/static_white" android:gravity="center" android:id="@+id/menuRight" android:background="@color/function_danger_500" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="26dp" android:paddingEnd="26dp" android:textFontWeight="500"/>
    </FrameLayout>
</merge>
