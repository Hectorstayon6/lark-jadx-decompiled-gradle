<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/lkui_navigation_default_height">
    <LinearLayout android:orientation="horizontal" android:id="@+id/leftContainer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="12dp">
        <ImageView android:id="@+id/leftImage1" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/lkui_navigation_back"/>
        <ImageView android:id="@+id/leftImage2" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/lkui_N900" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标准标题" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/rightContainer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="12dp" android:layout_alignParentEnd="true">
        <ImageView android:id="@+id/rightImage2" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginEnd="10dp"/>
        <ImageView android:id="@+id/rightImage1" android:layout_width="24dp" android:layout_height="24dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/lkui_N900" android:id="@+id/rightText" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
