<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:background="@color/bg_float_overlay" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/mm_toolbar_seekbar_container" android:layout_width="match_parent" android:layout_height="46dp">
        <com.ss.android.lark.mm.module.reaction.panel.ReactionTimeLine android:id="@+id/mm_toolbar_reaction_line" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="match_parent" android:layout_height="14dp" android:layout_marginLeft="-2dp" android:layout_marginTop="8dp" android:layout_marginRight="-2dp" android:layout_alignLeft="@+id/mm_toolbar_seekbar" android:layout_alignRight="@+id/mm_toolbar_seekbar"/>
        <com.ss.android.lark.mm.module.player.core.layer.widget.KeyWordCircle android:id="@+id/mm_toolbar_search_dot_line" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_below="@+id/mm_toolbar_seekbar" android:layout_alignLeft="@+id/mm_toolbar_seekbar" android:layout_alignRight="@+id/mm_toolbar_seekbar" android:translationY="-1dp" app:radius="2dp"/>
        <SeekBar android:id="@+id/mm_toolbar_seekbar" android:paddingLeft="0dp" android:paddingRight="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="2dp" android:progressDrawable="@drawable/mm_seekbar_layer_progress" android:minHeight="2dp" android:thumb="@drawable/mm_shape_thumb" android:thumbOffset="0dp" android:layout_below="@+id/mm_toolbar_reaction_line" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="30dp" android:layout_above="@+id/mm_toolbar_seekbar"/>
        <TextView android:textSize="10dp" android:textColor="@color/text_placeholder" android:id="@+id/mm_toolbar_position" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/mm_toolbar_seekbar" android:layout_alignLeft="@+id/mm_toolbar_seekbar"/>
        <TextView android:textSize="10dp" android:textColor="@color/text_placeholder" android:id="@+id/mm_toolbar_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/mm_toolbar_seekbar" android:layout_alignRight="@+id/mm_toolbar_seekbar"/>
        <View android:id="@+id/mm_toolbar_guide_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="56dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="8dp" android:layout_marginBottom="24dp">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/mm_toolbar_reaction" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="20dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:lottie_rawRes="@raw/mm_like_detail"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/mm_toolbar_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="20dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_speed_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginRight="21dp" android:tint="@color/icon_n1" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/mm_video_speed"/>
            <TextView android:textSize="9dp" android:textColor="@color/ud_N900_60" android:gravity="center" android:id="@+id/mm_toolbar_speed_tag" android:background="@drawable/mm_bg_toolbar_speed" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:translationX="-16dp" android:translationY="6dp" app:layout_constraintBottom_toTopOf="@+id/mm_toolbar_speed_img" app:layout_constraintLeft_toRightOf="@+id/mm_toolbar_speed_img"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_prev15s" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/mm_toolbar_play_pause" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_back_15s"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_play_pause" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="29dp" android:layout_marginRight="29dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_play"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_play_loading" android:visibility="invisible" android:layout_width="56dp" android:layout_height="56dp" android:layout_centerInParent="true" app:srcCompat="@drawable/mm_video_loading"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_next15s" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/mm_toolbar_play_pause" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_forward_15s"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/mm_toolbar_podcast_enter" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mm_video_podcast"/>
    </RelativeLayout>
</LinearLayout>
