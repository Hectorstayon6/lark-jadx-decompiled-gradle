        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/specific_error_wrapper" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/common_error_wrapper">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/img_specific_error" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/illustration_placeholder_common_load_failed"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_caption" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/OpenPlatform_Workplace_LoadFailureMsg"/>
