<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/participant_manage" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="@dimen/dp_44" android:layout_alignParentTop="true">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="24dp" android:textColor="@color/iconfont_n1_selector" android:id="@+id/participant_manage_close" android:padding="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_close" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
            <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/participant_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/View_M_Participants" android:layout_centerInParent="true"/>
            <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="@dimen/dp_16" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/participant_setting_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/View_G_Settings" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dp_16" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/breakout_room_banner" android:background="@color/function_success_100" android:paddingTop="@dimen/dp_11" android:paddingBottom="@dimen/dp_11" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title" android:paddingStart="@dimen/dp_16" android:paddingEnd="@dimen/dp_16">
            <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@color/function_success_500" android:id="@+id/banner_time_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_time_solid" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
            <TextView android:textColor="@color/text_title" android:id="@+id/banner_info_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/View_G_Duration" android:layout_marginStart="6.5dp" android:layout_toEndOf="@+id/banner_time_icon"/>
            <com.ss.android.vc.common.widget.AdaptiveWidthTextView android:textSize="14dp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/banner_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dp_6" android:layout_toEndOf="@+id/banner_info_text" android:lineHeight="22dp"/>
            <TextView android:textSize="14dp" android:textColor="@color/meeting_statistics_blue_text_selector" android:id="@+id/banner_ask_for_help" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/View_G_AskForHelp" android:layout_alignParentEnd="true" android:lineHeight="@dimen/dp_22"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/search_area" android:layout_width="match_parent" android:layout_height="@dimen/dp_36" android:layout_marginTop="@dimen/dp_8" android:layout_marginBottom="@dimen/dp_8" android:layout_below="@+id/breakout_room_banner">
            <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/search_bar_fake" android:background="@drawable/bg_participant_searchbar" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginRight="8dp" android:layout_weight="1">
                <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@color/icon_n3" android:id="@+id/search_bar_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_search_new" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
                <com.ss.android.vc.common.widget.LineHeightTextView android:textSize="14dp" android:textColor="@color/text_placeholder" android:textColorHint="@color/text_placeholder" android:id="@+id/search_et_normal" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/View_G_SearchOrInvite" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginStart="12dp" android:layout_toEndOf="@+id/search_bar_image"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/search_bar_share_btn" android:background="@drawable/bg_participant_searchbar" android:layout_width="@dimen/dp_36" android:layout_height="match_parent" android:layout_marginEnd="@dimen/dp_16">
                <com.ss.android.vc.common.widget.IconFontView android:textSize="16dp" android:textColor="@color/iconfont_black_icon_n800_selector" android:layout_gravity="center" android:id="@+id/search_bar_share_btn_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iconfont_icon_forward"/>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout android:id="@+id/participant_list_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/search_area"/>
        <RelativeLayout android:id="@+id/search_mask" android:background="@color/bg_body" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_area" android:alpha="0.5">
            <View android:id="@+id/search_mask_keyboard_padding" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/search_result_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="44dp"/>
</RelativeLayout>
