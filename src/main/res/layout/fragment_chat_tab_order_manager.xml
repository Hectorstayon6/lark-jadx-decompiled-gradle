        <TextView android:textSize="14sp" android:textColor="@color/function_info_500" android:id="@+id/manager_func" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_Edit" android:layout_marginStart="10dp" android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="@+id/manager_label" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/manager_label_tip" app:layout_constraintTop_toTopOf="@+id/manager_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/tab_list" android:background="@color/lkui_transparent" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
