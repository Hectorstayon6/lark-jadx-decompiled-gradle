<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="160dp" android:layout_height="238dp">
    <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/root_mask" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@color/static_white_40" app:radius="0dp"/>
    <RelativeLayout android:id="@+id/red_packet_content_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/red_packet_iv" android:layout_width="160dp" android:layout_height="176dp" android:src="@drawable/red_packet_message_cell_content_bg" android:scaleType="centerCrop" app:radius="0dp"/>
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/red_packet_cover_mask" android:visibility="gone" android:layout_width="160dp" android:layout_height="108dp" android:src="@drawable/red_packet_custom_cover_mask" android:scaleType="centerCrop" app:radius="0dp"/>
        <com.larksuite.component.ui.imageview.LKUIRoundedImageView2 android:id="@+id/red_packet_footer_iv" android:layout_width="160dp" android:layout_height="102dp" android:src="@drawable/red_packet_message_cell_footer" android:layout_alignParentBottom="true" app:radius="0dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/imtoken_red_envelope_card_text_title_yellow" android:ellipsize="end" android:gravity="center" android:id="@+id/subject_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:maxWidth="192dp" android:maxLines="2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginHorizontal="10dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/imtoken_red_envelope_card_text_placeholder_yellow" android:id="@+id/receive_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/subject_tv" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/grab_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:src="@drawable/red_packet_message_cell_btn_selector" android:layout_alignTop="@+id/red_packet_footer_iv" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
        <View android:background="@color/static_white_30" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginBottom="30dp" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/static_white_70" android:id="@+id/red_packet_type_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="6dp" android:text="@string/Lark_Legacy_NormalAmount" android:layout_alignParentBottom="true" android:layout_marginHorizontal="10dp"/>
        <ImageView android:id="@+id/company_logo" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginBottom="4dp" android:scaleType="centerInside" android:layout_alignParentBottom="true" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</FrameLayout>
