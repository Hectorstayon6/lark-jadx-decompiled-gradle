<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/group_info_edit" android:background="@color/bg_base" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/titlebar" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_background="@android:color/transparent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/root_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/titlebar">
        <LinearLayout android:orientation="vertical" android:id="@+id/input_text_count_wrapper" android:background="@drawable/group_info_edit_bg" android:focusable="false" android:visibility="visible" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_item_margin_horizontal" android:layout_marginTop="@dimen/setting_item_margin_top" android:layout_marginRight="@dimen/setting_item_margin_horizontal" android:layout_marginBottom="16dp" android:layout_marginHorizontal="@dimen/setting_item_margin_horizontal">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/info_edit_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="16sp" android:textColor="@color/text_title" android:textColorHint="@color/text_placeholder" android:ellipsize="end" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/info_edit_text" android:background="@null" android:paddingTop="12dp" android:paddingBottom="12dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="48dp" android:layout_weight="1" android:layout_marginStart="16dp"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/clear_btn" android:visibility="gone" android:layout_width="48dp" android:layout_height="42dp" android:src="@drawable/icon_gray_close" android:scaleType="center"/>
            </LinearLayout>
            <TextView android:textColor="@color/text_placeholder" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/tv_input_text_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <com.ss.android.lark.widget.linked_emojicon.widget.LinkEmojiTextView android:textSize="16sp" android:textColor="@color/text_title" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/info_show_text" android:paddingLeft="15dp" android:paddingRight="15dp" android:paddingBottom="24dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawablePadding="8dp" android:lineSpacingExtra="2.5dp" app:emojiconSize="19sp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/group_empty_description_wrapper" android:background="@color/lkui_transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <ImageView android:layout_width="125dp" android:layout_height="125dp" android:src="@drawable/illustration_placeholder_common_no_announcement"/>
        <TextView android:textSize="14sp" android:textColor="@color/text_placeholder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/Lark_Legacy_EmptyDescription"/>
    </LinearLayout>
</RelativeLayout>
