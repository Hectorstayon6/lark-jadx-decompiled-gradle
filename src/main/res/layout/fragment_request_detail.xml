<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/bg_body_overlay" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.bytedance.ee.bear.widgets.BaseTitleBar android:id="@+id/titleBar" android:layout_width="match_parent" android:layout_height="50dp" app:layout_constraintTop_toTopOf="0"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/titleBar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/text_title" android:id="@+id/url" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/requestHeaderLayout" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/requestHeaderArrow" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ud_icon_expand_down_filled"/>
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Request Header" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/text_caption" android:id="@+id/requestHeaderText" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/responseHeaderLayout" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/responseHeaderArrow" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ud_icon_expand_down_filled"/>
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Response Header" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/text_caption" android:id="@+id/responseHeaderText" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/responseBodyLayout" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/responseBodyArrow" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ud_icon_expand_down_filled"/>
                <TextView android:textSize="16sp" android:textColor="@color/text_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Response Body" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/text_caption" android:id="@+id/responseBodyText" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
