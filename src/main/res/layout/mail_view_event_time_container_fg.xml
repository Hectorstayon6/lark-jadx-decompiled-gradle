<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/timeContainer" android:background="@drawable/mail_setting_circle_corner_box_background" android:paddingLeft="@dimen/mail_setting_item_left_padding" android:paddingRight="@dimen/mail_setting_item_right_padding" android:layout_width="match_parent" android:layout_height="68dp">
        <TextView android:textAppearance="@style/UDText.Headline" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/tvEventStartTimeMain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/time_start_end_divider"/>
        <TextView android:textAppearance="@style/UDText.Caption1" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/tvEventStartTimeMinor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" android:singleLine="true" android:layout_below="@+id/tvEventStartTimeMain" android:layout_alignParentLeft="true"/>
        <TextView android:textAppearance="@style/UDText.Caption1" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/tvEventStartTimeExtra" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignTop="@+id/tvEventStartTimeMinor" android:layout_marginStart="12dp" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/time_start_end_divider" android:layout_toEndOf="@+id/tvEventStartTimeMinor"/>
        <ImageView android:id="@+id/time_start_end_divider" android:layout_width="8dp" android:layout_height="32dp" android:src="@drawable/mail_edit_time_arrow" android:layout_centerInParent="true"/>
        <TextView android:textAppearance="@style/UDText.Headline" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/tvEventEndTimeMain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:singleLine="true" android:layout_alignParentRight="true"/>
        <TextView android:textAppearance="@style/UDText.Caption1" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/tvEventEndTimeMinor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true" android:layout_below="@+id/tvEventEndTimeMain" android:layout_alignLeft="@+id/tvEventEndTimeMain" android:layout_alignWithParentIfMissing="true"/>
        <TextView android:textAppearance="@style/UDText.Caption1" android:textColor="@color/text_caption" android:ellipsize="end" android:id="@+id/tvEventEndTimeExtra" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true" android:layout_toRightOf="@+id/tvEventEndTimeMinor" android:layout_below="@+id/tvEventEndTimeMain"/>
    </RelativeLayout>
    <View android:id="@+id/timeDivider" android:background="@color/line_border_card" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginStart="48dp"/>
    <TextView android:textSize="14dp" android:textColor="@color/text_placeholder" android:ellipsize="end" android:id="@+id/timeZoneTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:singleLine="true" android:layout_marginStart="48dp"/>
    <LinearLayout android:id="@+id/timeZoneWarn" android:background="@color/bg_body_overlay" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/time_zone_icon" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:src="@drawable/mail_icon_edit_time_zone" android:layout_marginStart="16dp"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_caption" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Calendar_Timezone_Alert" android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>
