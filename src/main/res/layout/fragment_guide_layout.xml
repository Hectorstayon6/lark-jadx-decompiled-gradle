<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/lottie_guide" android:clipChildren="false" android:layout_width="250dp" android:layout_height="250dp">
        <ImageView android:id="@+id/guide_image_1" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/guide_image_2" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/guide_image_3" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/guide_image_4" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <TextView android:textSize="30sp" android:textColor="@color/text_title" android:gravity="center" android:id="@+id/sloganTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="20dp"/>
    <TextView android:textSize="16sp" android:textColor="@color/text_caption" android:gravity="center_horizontal" android:id="@+id/sloganContent" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
