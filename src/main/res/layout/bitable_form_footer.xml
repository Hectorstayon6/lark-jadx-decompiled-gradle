<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="17sp" android:textColor="@color/static_white" android:gravity="center_horizontal" android:id="@+id/form_submit" android:background="@drawable/bitable_form_submit_bg" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Bitable_Form_Submit" android:layout_alignParentTop="true"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginBottom="56dp" android:layout_below="@+id/form_submit" android:layout_centerHorizontal="true">
        <View android:layout_gravity="center_vertical" android:background="@color/line_divider_default" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1" android:layout_marginEnd="20dp"/>
        <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView android:layout_width="18dp" android:layout_height="18dp" app:srcCompat="@drawable/ud_icon_file_round_bitable_colorful"/>
            <TextView android:textSize="12sp" android:textColor="@color/text_placeholder" android:gravity="center" android:id="@+id/form_support_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <View android:layout_gravity="center" android:background="@color/line_divider_default" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1" android:layout_marginStart="20dp"/>
    </LinearLayout>
</RelativeLayout>
