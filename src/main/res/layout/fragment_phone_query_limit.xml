<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/lkui_N00" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.ss.android.lark.ui.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_back_icon="@drawable/titlebar_close_bg_selector"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/phone_query_limit_hint_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <TextView android:textSize="16sp" android:textColor="@color/lkui_N700" android:id="@+id/phone_query_limit_hint_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="19dp" android:drawableLeft="@drawable/ic_svg_phone_query_warn" android:drawablePadding="6dp" android:drawableStart="@drawable/ic_svg_phone_query_warn" android:layout_marginStart="16dp"/>
        <TextView android:textColor="@color/lkui_N700" android:id="@+id/phone_query_limit_hint_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginBottom="20dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/voice_urgent_call_hint_ll" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <LinearLayout android:gravity="center" android:id="@+id/voice_urgent_call_tips_ll" android:layout_width="match_parent" android:layout_height="22dp" android:layout_marginTop="50dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_svg_voice_call_oval"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="@string/Lark_Legacy_PhoneCallManageUrgentAdvice" android:layout_marginStart="6dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/ic_svg_voice_call_oval" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/voice_urgent_call_action_rl" android:background="@drawable/phone_query_limit_button_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
            <TextView android:textSize="17sp" android:textColor="@color/lkui_N00" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_PhoneCallManageVoIP" android:drawableLeft="@drawable/ic_svg_voice_call" android:drawablePadding="8dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:gravity="center" android:id="@+id/understand_phone_control_detail_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="36dp" android:text="@string/Lark_Legacy_PhoneCallManageDetail" android:drawableRight="@drawable/ic_svg_arrow" android:drawablePadding="2dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/phone_call_continue_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:paddingStart="16dp" android:paddingEnd="16dp">
        <TextView android:textSize="17sp" android:textColor="@color/lkui_N00" android:gravity="center" android:id="@+id/phone_call_continue_tv" android:background="@drawable/phone_query_limit_button_selector" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Lark_Legacy_ApplicationPhoneCallTimeTwoTimeContinue"/>
        <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/apply_for_phone_call_amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/Lark_Legacy_ApplicationPhoneCallTimeTwoTimeApp" android:drawableRight="@drawable/ic_svg_arrow" android:drawablePadding="2dp"/>
    </LinearLayout>
    <TextView android:textSize="17sp" android:textColor="@color/lkui_N00" android:gravity="center" android:id="@+id/phone_query_limit_button_tv" android:background="@drawable/phone_query_limit_button_selector" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
</LinearLayout>
