<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.viewpager.widget.ViewPager android:id="@+id/vp_at" android:layout_width="match_parent" android:layout_height="@dimen/at_viewpager_max_height"/>
    <FrameLayout android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/line_divider_default" android:layout_width="match_parent" android:layout_height="@dimen/ud_divider_size"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_at_bar" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="44dp">
        <FrameLayout android:id="@+id/at_back" android:paddingLeft="20dp" android:paddingRight="@dimen/space_kit_len_20" android:layout_width="wrap_content" android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_vertical" android:id="@+id/at_back_icon" android:layout_width="@dimen/space_kit_len_24" android:layout_height="@dimen/space_kit_len_24" app:srcCompat="@drawable/ud_icon_arrow_left_outlined"/>
        </FrameLayout>
        <View android:layout_gravity="center_vertical" android:id="@+id/separator" android:background="@color/line_divider_default" android:layout_width="1dp" android:layout_height="24dp"/>
        <net.lucode.hackware.magicindicator.MagicIndicator android:id="@+id/magic_indicator" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/space_kit_len_6"/>
    </LinearLayout>
</LinearLayout>
