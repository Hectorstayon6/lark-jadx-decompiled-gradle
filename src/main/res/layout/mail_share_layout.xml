    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/mail_share_add_member_sharing_list" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:overScrollMode="never"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/mail_share_empty_candidate_list_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="88dp">
            <com.larksuite.component.universe_design.emptystate.UDEmptyState android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" app:ud_empty_desc="@string/Mail_Share_NoResultsFound" app:ud_empty_descTextColor="@color/text_placeholder" app:ud_empty_imageRes="@drawable/illustration_placeholder_common_search" app:ud_empty_imageSize="112dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/mail_share_add_member_candidate_list" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
    </FrameLayout>
    <TextView android:textSize="@dimen/mail_share_header_text_size" android:textColor="@color/text_placeholder" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/mail_share_mode_title" android:background="@color/bg_float_overlay" android:paddingLeft="@dimen/mail_message_list_share_view_vertical_space" android:layout_width="match_parent" android:layout_height="@dimen/mail_share_header_height" android:text="@string/Mail_Share_ShareEmailMode" android:includeFontPadding="false"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/mail_share_mode_switch_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16dp" android:textColor="@color/text_title" android:gravity="left|center_vertical|center_horizontal|center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mail_message_list_share_view_vertical_space" android:layout_marginTop="7dp" android:layout_marginBottom="7dp" android:text="@string/Mail_Share_ShareIncomingEmails" android:includeFontPadding="false" android:layout_weight="1"/>
        <com.ss.android.lark.widget.switch_button.SwitchButton android:id="@+id/mail_share_mode_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/LKUI_SwitchButton"/>
    </LinearLayout>
    <TextView android:textSize="12dp" android:textColor="@color/text_placeholder" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/mail_share_mode_description" android:paddingLeft="@dimen/mail_message_list_share_view_vertical_space" android:paddingRight="@dimen/mail_message_list_share_view_vertical_space" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="@string/Mail_Share_MobileSelecSharemode" android:includeFontPadding="false"/>
</LinearLayout>
