    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mail_share_search_container" android:background="@drawable/mail_search_bar_background" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginRight="16dp">
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="8dp" android:src="@drawable/mail_search_bar_icon"/>
        <com.larksuite.component.universe_design.edittext.UDEditText android:textSize="16dp" android:textColor="@color/text_title" android:textColorHint="@color/text_placeholder" android:layout_gravity="center_vertical" android:id="@+id/mail_share_add_member_search_input" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:hint="@string/Mail_Search_SearchBarPlaceHolder" android:singleLine="true" android:layout_weight="1" android:textCursorDrawable="@drawable/text_cursor_drawable" style="@style/UDEditText"/>
