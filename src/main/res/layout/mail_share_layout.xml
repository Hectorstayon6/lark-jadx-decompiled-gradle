<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_body" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="@dimen/title_height">
        <ImageView android:id="@+id/mail_share_title_bar_back_button" android:paddingLeft="@dimen/mail_message_list_share_title_bar_vertical_space" android:paddingTop="@dimen/mail_operation_title_bar_back_button_horizontal_padding" android:paddingRight="@dimen/mail_message_list_share_title_bar_vertical_space" android:paddingBottom="@dimen/mail_operation_title_bar_back_button_horizontal_padding" android:layout_width="@dimen/title_height" android:layout_height="@dimen/title_height" android:layout_marginLeft="@dimen/mail_operation_title_bar_back_button_left_margin" android:src="@drawable/mail_ic_back_selector" android:scaleType="fitCenter"/>
