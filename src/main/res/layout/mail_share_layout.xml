    <FrameLayout android:id="@+id/mail_share_create_new_chat_container" android:paddingLeft="@dimen/mail_message_list_share_title_bar_vertical_space" android:paddingRight="@dimen/mail_message_list_share_title_bar_vertical_space" android:layout_width="match_parent" android:layout_height="66dp">
        <TextView android:textSize="17dp" android:textColor="@color/text_title" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Mail_Share_CreateNewChat" android:includeFontPadding="false"/>
