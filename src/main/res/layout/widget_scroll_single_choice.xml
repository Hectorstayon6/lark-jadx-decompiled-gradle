<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_blank_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/scroll_choice_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="#eeeeee" android:layout_width="match_parent" android:layout_height="50dp">
            <View android:background="#aaa" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <TextView android:textSize="18sp" android:textColor="#24ad9d" android:id="@+id/tv_cancel" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="取消" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textColor="#24ad9d" android:id="@+id/tv_sure" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:text="确定" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <View android:background="#aaa" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </RelativeLayout>
        <View android:background="#24ad9d" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <com.webianks.library.scroll_choice.ScrollChoice android:id="@+id/scroll_choice" android:layout_width="match_parent" android:layout_height="150dp" app:scroll_atmospheric="true" app:scroll_background_color="#f6f6f6" app:scroll_indicator="true" app:scroll_indicator_color="#f9f9f9" app:scroll_item_align="0" app:scroll_item_text_color="#00000f" app:scroll_selected_item_background="#f9f9f9" app:scroll_selected_item_text_color="#000000" app:scroll_visible_item_count="3"/>
    </LinearLayout>
</merge>
